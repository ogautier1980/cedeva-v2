<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cedeva</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @{
        var bgColor = Context.Request.Query["bg"].ToString();
        var btnColor = Context.Request.Query["btn"].ToString();

        // Default colors if not provided
        if (string.IsNullOrEmpty(bgColor)) bgColor = "667eea,764ba2"; // gradient colors
        if (string.IsNullOrEmpty(btnColor)) btnColor = "0d6efd"; // Bootstrap primary

        // Parse gradient or solid color
        var bgColors = bgColor.Split(',');
        var bgStyle = bgColors.Length > 1
            ? $"background: linear-gradient(135deg, #{bgColors[0]} 0%, #{bgColors[1]} 100%);"
            : $"background-color: #{bgColors[0]};";
    }

    <style>
        body {
            @Html.Raw(bgStyle)
            min-height: 100vh;
            padding: 20px 0;
        }

        /* Override button colors */
        .btn-primary {
            background-color: #@btnColor !important;
            border-color: #@btnColor !important;
        }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #@(btnColor)dd !important;
            border-color: #@(btnColor)dd !important;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .btn-lg {
            padding: 12px 30px;
            font-size: 1.1rem;
        }

        .activity-card {
            transition: all 0.3s ease;
        }

        .activity-card:hover {
            transform: translateY(-5px);
        }

        .form-check-input:checked ~ .form-check-label .card {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }

        .lead {
            font-size: 1.1rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header class="mb-4">
        <div class="container">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bold mb-2">
                    <i class="fas fa-sun me-3"></i>Cedeva
                </h1>
                <p class="lead mb-0">@Localizer["PublicLayout.Tagline"]/p>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="mt-5 text-center text-white">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Cedeva - @Localizer["PublicLayout.AllRightsReserved"]</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
