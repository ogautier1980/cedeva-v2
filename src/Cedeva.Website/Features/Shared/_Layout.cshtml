@inject Cedeva.Core.Interfaces.ICurrentUserService CurrentUserService
@inject Cedeva.Infrastructure.Data.CedevaDbContext DbContext
@using Microsoft.EntityFrameworkCore

@{
    // ActivityManagement navigation variables
    int activityId = ViewData.ContainsKey("ActivityId") ? Convert.ToInt32(ViewData["ActivityId"]) : 0;
    string navSection = ViewData.ContainsKey("NavSection") ? ViewData["NavSection"]?.ToString() ?? "" : "";
    string navAction = ViewData.ContainsKey("NavAction") ? ViewData["NavAction"]?.ToString() ?? "" : "";
    string activityName = ViewData.ContainsKey("ActivityName") ? ViewData["ActivityName"]?.ToString() ?? "" : "";
}

<!DOCTYPE html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Cedeva</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <!-- jQuery UI CSS -->
    <link href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/cedeva.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        /* Activity Management Compact Navigation */
        .activity-nav-compact .nav-link {
            font-size: 0.875rem;
            padding: 0.5rem 0.75rem;
            white-space: nowrap;
        }

        .activity-nav-compact .nav-link i {
            font-size: 0.875rem;
        }

        /* Hide text on smaller screens, keep only icons */
        @@media (max-width: 1400px) {
            .activity-nav-compact .nav-link {
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body class="d-flex flex-column h-100 bg-img">
    @{
        var brandName = "Cedeva";
        if (User.IsInRole("Coordinator") && CurrentUserService.OrganisationId.HasValue)
        {
            var organisation = await DbContext.Organisations
                .Where(o => o.Id == CurrentUserService.OrganisationId.Value)
                .Select(o => o.Name)
                .FirstOrDefaultAsync();
            if (!string.IsNullOrEmpty(organisation))
            {
                brandName = organisation;
            }
        }
    }
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-primary text-white" id="sidebar-wrapper" style="width: 250px; min-height: 100vh;">
            <div class="sidebar-heading py-4 px-3 fs-4 fw-bold border-bottom border-white border-opacity-25">
                <i class="fas fa-campground me-2"></i>@brandName
            </div>
            <div class="list-group list-group-flush">
                <a href="/" class="list-group-item list-group-item-action bg-primary text-white border-0">
                    <i class="fas fa-tachometer-alt me-2"></i>@Localizer["Dashboard"]
                </a>
                <a href="/Activities" class="list-group-item list-group-item-action bg-primary text-white border-0">
                    <i class="fas fa-calendar-alt me-2"></i>@Localizer["Activities"]
                </a>
                <a href="/Bookings" class="list-group-item list-group-item-action bg-primary text-white border-0">
                    <i class="fas fa-clipboard-list me-2"></i>@Localizer["Bookings"]
                </a>
                <a href="/Children" class="list-group-item list-group-item-action bg-primary text-white border-0">
                    <i class="fas fa-child me-2"></i>@Localizer["Children"]
                </a>
                <a href="/Parents" class="list-group-item list-group-item-action bg-primary text-white border-0">
                    <i class="fas fa-user-friends me-2"></i>@Localizer["Parents"]
                </a>
                <a href="/TeamMembers" class="list-group-item list-group-item-action bg-primary text-white border-0">
                    <i class="fas fa-user-tie me-2"></i>@Localizer["TeamMembers"]
                </a>
                <div class="border-top border-white border-opacity-25 my-2"></div>
                @{
                    var currentUser = User;
                }
                @if (User.IsInRole("Admin"))
                {
                    <div class="border-top border-white border-opacity-25 my-2"></div>
                    <div class="px-3 py-2 text-white small text-uppercase opacity-75">@Localizer["Layout.Administration"]</div>
                    <a href="/Organisations" class="list-group-item list-group-item-action bg-primary text-white border-0">
                        <i class="fas fa-building me-2"></i>@Localizer["Organisations"]
                    </a>
                    <a href="/Users" class="list-group-item list-group-item-action bg-primary text-white border-0">
                        <i class="fas fa-users-cog me-2"></i>@Localizer["Users"]
                    </a>
                }
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom" style="position: relative; z-index: 1030;">
                <div class="container-fluid">
                    <button class="btn btn-link text-white" id="menu-toggle">
                        <i class="fas fa-bars fa-white"></i>
                    </button>

                    @if (activityId > 0)
                    {
                        <!-- Activity Management Navigation -->
                        <div class="d-flex align-items-center text-white me-2">
                            <a asp-action="Index" asp-controller="ActivityManagement" asp-route-id="@activityId"
                               class="btn btn-sm btn-outline-light me-2" title="@Localizer["BackToDashboard"]">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                            <span class="text-white-50 me-2 d-none d-xl-inline small">@activityName</span>
                        </div>

                        <ul class="navbar-nav me-auto activity-nav-compact">
                            <!-- Inscriptions en attente -->
                            <li class="nav-item">
                                <a class="nav-link @(navSection == "PendingBookings" ? "active" : "")"
                                   asp-action="UnconfirmedBookings" asp-controller="ActivityManagement" asp-route-id="@activityId">
                                    <i class="fas fa-list-check"></i> @Localizer["ActivityManagement.PendingBookings"]
                                </a>
                            </li>

                            <!-- PrÃ©sences -->
                            <li class="nav-item">
                                <a class="nav-link @(navSection == "Presences" ? "active" : "")"
                                   asp-action="Presences" asp-controller="ActivityManagement" asp-route-id="@activityId">
                                    <i class="fas fa-clipboard-check"></i> @Localizer["Presences"]
                                </a>
                            </li>

                            <!-- Comptes (dropdown avec sous-actions) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(navSection == "Financial" ? "active" : "")"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="far fa-money-bill-1"></i> @Localizer["ActivityManagement.Accounts"]
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item @(navAction == "Index" ? "active" : "")"
                                           asp-action="Index" asp-controller="Financial" asp-route-id="@activityId">
                                            <i class="fas fa-chart-line"></i> @Localizer["Financial.Dashboard"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(navAction == "Transactions" ? "active" : "")"
                                           asp-action="Transactions" asp-controller="Financial" asp-route-id="@activityId">
                                            <i class="fas fa-exchange-alt"></i> @Localizer["Financial.Transactions"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(navAction == "TeamSalaries" ? "active" : "")"
                                           asp-action="TeamSalaries" asp-controller="Financial" asp-route-id="@activityId">
                                            <i class="fas fa-money-bill-wave"></i> @Localizer["Financial.TeamSalaries"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(navAction == "ImportCoda" ? "active" : "")"
                                           asp-action="ImportCoda" asp-controller="Financial" asp-route-id="@activityId">
                                            <i class="fas fa-file-import"></i> @Localizer["Financial.ImportCoda"]
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- E-mails (dropdown avec sous-actions) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(navSection == "Emails" ? "active" : "")"
                                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-envelope"></i> @Localizer["ActivityManagement.Emails"]
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item @(navAction == "SendEmail" ? "active" : "")"
                                           asp-action="SendEmail" asp-controller="ActivityManagement" asp-route-id="@activityId">
                                            <i class="fas fa-paper-plane"></i> @Localizer["Email.SendTargeted"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(navAction == "SentEmails" ? "active" : "")"
                                           asp-action="SentEmails" asp-controller="ActivityManagement" asp-route-id="@activityId">
                                            <i class="fas fa-history"></i> @Localizer["Email.SentHistory"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item @(navAction == "EmailTemplates" ? "active" : "")"
                                           asp-action="Index" asp-controller="EmailTemplates" asp-route-id="@activityId">
                                            <i class="fas fa-file-alt"></i> @Localizer["ActivityManagement.EmailTemplates"]
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Excursions -->
                            <li class="nav-item">
                                <a class="nav-link @(navSection == "Excursions" ? "active" : "")"
                                   asp-action="Index" asp-controller="Excursions" asp-route-id="@activityId">
                                    <i class="fas fa-train"></i> @Localizer["ActivityManagement.Excursions"]
                                </a>
                            </li>

                            <!-- Ã‰quipe -->
                            <li class="nav-item">
                                <a class="nav-link @(navSection == "Team" ? "active" : "")"
                                   asp-action="TeamMembers" asp-controller="ActivityManagement" asp-route-id="@activityId">
                                    <i class="fas fa-people-group"></i> @Localizer["ActivityManagement.Team"]
                                </a>
                            </li>

                            <!-- ONE (placeholder) -->
                            <li class="nav-item">
                                <a class="nav-link disabled" aria-disabled="true">
                                    ONE
                                </a>
                            </li>
                        </ul>
                    }

                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-auto">
                            @{
                                var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
                                var languageCode = currentCulture.StartsWith("fr") ? "fr" :
                                                   currentCulture.StartsWith("nl") ? "nl" :
                                                   currentCulture.StartsWith("en") ? "en" : "";
                                var languageIcon = languageCode switch
                                {
                                    "fr" => "ðŸ‡«ðŸ‡·",
                                    "nl" => "ðŸ‡³ðŸ‡±",
                                    "en" => "ðŸ‡¬ðŸ‡§",
                                    _ => "ðŸŒ"
                                };
                                var languageName = languageCode switch
                                {
                                    "fr" => "FranÃ§ais",
                                    "nl" => "Nederlands",
                                    "en" => "English",
                                    _ => "Language"
                                };
                            }
                            <li class="nav-item dropdown">
                                <button class="nav-link dropdown-toggle btn btn-link text-white text-decoration-none" id="languageDropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="me-1">@languageIcon</span>@languageName
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Home" asp-action="SetLanguage" method="post" class="dropdown-item p-0">
                                            <input type="hidden" name="culture" value="fr" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                            <button type="submit" class="btn btn-link text-decoration-none text-dark w-100 text-start">
                                                ðŸ‡«ðŸ‡· FranÃ§ais
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form asp-controller="Home" asp-action="SetLanguage" method="post" class="dropdown-item p-0">
                                            <input type="hidden" name="culture" value="nl" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                            <button type="submit" class="btn btn-link text-decoration-none text-dark w-100 text-start">
                                                ðŸ‡³ðŸ‡± Nederlands
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form asp-controller="Home" asp-action="SetLanguage" method="post" class="dropdown-item p-0">
                                            <input type="hidden" name="culture" value="en" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                            <button type="submit" class="btn btn-link text-decoration-none text-dark w-100 text-start">
                                                ðŸ‡¬ðŸ‡§ English
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item dropdown">
                                    <button class="nav-link dropdown-toggle btn btn-link text-white text-decoration-none" id="navbarDropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="/Account/Profile">@Localizer["Layout.Profile"]</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post">
                                                <button type="submit" class="dropdown-item">@Localizer["Layout.Logout"]</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="flex-shrink-0 p-4">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="footer mt-auto py-3 bg-dark">
                <div class="container">
                    <span class="text-center txt-footer d-block">
                        <small>&copy; @DateTime.Now.Year - Cedeva - <a class="text-reset" href="/Home/Privacy">@Localizer["Layout.Privacy"]</a></small>
                    </span>
                </div>
            </footer>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle sidebar with persistence
        const wrapper = document.getElementById("wrapper");
        const menuToggle = document.getElementById("menu-toggle");

        // Restore sidebar state from localStorage
        if (localStorage.getItem("sidebarToggled") === "true") {
            wrapper?.classList.add("toggled");
        }

        // Toggle sidebar and save state
        menuToggle?.addEventListener("click", function(e) {
            e.preventDefault();
            wrapper?.classList.toggle("toggled");

            // Save state to localStorage
            const isToggled = wrapper?.classList.contains("toggled");
            localStorage.setItem("sidebarToggled", isToggled ? "true" : "false");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
