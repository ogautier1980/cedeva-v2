@model Cedeva.Website.Features.TeamMembers.ViewModels.TeamMemberViewModel
@{
    ViewData["Title"] = Localizer["TeamMembers.MemberDetails"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>@Localizer["TeamMembers.MemberDetails"]</h5>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.TeamMemberId" class="btn btn-sm btn-primary text-nowrap">
                            <i class="fas fa-edit me-1"></i>@Localizer["Edit"]
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.TeamMemberId" class="btn btn-sm btn-danger text-nowrap">
                            <i class="fas fa-trash me-1"></i>@Localizer["Delete"]
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="mb-3 text-primary"><i class="fas fa-user me-2"></i>@Localizer["PersonalInformation"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["FirstName"]</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">@Localizer["LastName"]</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">@Localizer["BirthDate"]</dt>
                        <dd class="col-sm-8">
                            @Model.BirthDate.ToString("dd/MM/yyyy")
                            <span class="badge bg-primary ms-2">@((DateTime.Now.Year - Model.BirthDate.Year)) @Localizer["Children.YearsOld"]</span>
                        </dd>

                        <dt class="col-sm-4">@Localizer["NationalRegisterNumber"]</dt>
                        <dd class="col-sm-8">@Model.NationalRegisterNumber</dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-phone me-2"></i>@Localizer["Contact"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Email"]</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.@Localizer["Email"]">@Model.@Localizer["Email"]</a>
                        </dd>

                        <dt class="col-sm-4">@Localizer["Mobile"]</dt>
                        <dd class="col-sm-8">
                            <a href="tel:@Model.MobilePhoneNumber">@Model.MobilePhoneNumber</a>
                        </dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-map-marker-alt me-2"></i>@Localizer["Address"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Street"]</dt>
                        <dd class="col-sm-8">@Model.Street</dd>

                        <dt class="col-sm-4">@Localizer["PostalCode"]</dt>
                        <dd class="col-sm-8">@Model.PostalCode</dd>

                        <dt class="col-sm-4">@Localizer["City"]</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">@Localizer["Country"]</dt>
                        <dd class="col-sm-8">@Model.Country</dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-briefcase me-2"></i>@Localizer["TeamMembers.ProfessionalInformation"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Role"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.TeamRole == Cedeva.Core.Enums.TeamRole.Coordinator ? "bg-success" : "bg-primary")">
                                @Model.TeamRole
                            </span>
                        </dd>

                        <dt class="col-sm-4">@Localizer["License"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.License == Cedeva.Core.Enums.License.License ? "bg-success" : "bg-warning")">
                                @Model.License
                            </span>
                            @if (!string.IsNullOrEmpty(Model.LicenseUrl))
                            {
                                <a href="@Model.LicenseUrl" target="_blank" class="ms-2">
                                    <i class="fas fa-external-link-alt"></i> @Localizer["ViewDocument"]
                                </a>
                            }
                        </dd>

                        <dt class="col-sm-4">@Localizer["Status"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == Cedeva.Core.Enums.Status.Compensated ? "bg-primary" : "bg-secondary")">
                                @(Model.Status == Cedeva.Core.Enums.Status.Compensated ? Localizer["Enum.Status.Compensated"] : Localizer["Enum.Status.Volunteer"])
                            </span>
                        </dd>

                        @if (Model.DailyCompensation.HasValue)
                        {
                            <dt class="col-sm-4">@Localizer["TeamMembers.DailyCompensation"]</dt>
                            <dd class="col-sm-8">@Model.DailyCompensation.Value.ToString("C")</dd>
                        }
                    </dl>

                    <hr />

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary text-nowrap">
                            <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>@Localizer["Statistics"]</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-calendar-alt me-2 text-primary"></i>@Localizer["Activities"]</span>
                            <span class="badge bg-primary rounded-pill">@Model.ActivitiesCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-receipt me-2 text-success"></i>@Localizer["Expenses"]</span>
                            <span class="badge bg-success rounded-pill">@Model.ExpensesCount</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
