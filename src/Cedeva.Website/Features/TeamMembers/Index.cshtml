@model IEnumerable<Cedeva.Website.Features.TeamMembers.ViewModels.TeamMemberViewModel>
@{
    ViewData["Title"] = Localizer["TeamMembers"];
    var searchString = ViewData["SearchString"] as string;
    var pageNumber = (ViewData["PageNumber"] as int?) ?? 1;
    var pageSize = (ViewData["PageSize"] as int?) ?? 10;
    var totalPages = (ViewData["TotalPages"] as int?) ?? 1;
    var totalItems = (ViewData["TotalItems"] as int?) ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-tie me-2"></i>@Localizer["TeamMembers"]</h2>
        <div class="d-flex gap-2">
            <a asp-action="Export" asp-route-searchString="@searchString" class="btn btn-success text-nowrap">
                <i class="fas fa-file-excel me-2"></i>@Localizer["ExportExcel"]
            </a>
            <a asp-action="ExportPdf" asp-route-searchString="@searchString" class="btn btn-success text-nowrap">
                <i class="fas fa-file-pdf me-2"></i>@Localizer["ExportPdf"]
            </a>
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["TeamMembers.AddMember"]
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="@Localizer["TeamMembers.SearchPlaceholder"]" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>@Localizer["Search"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("LastName", Localizer["Name"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("Email", Localizer["Email"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Phone"]</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("TeamRole", Localizer["Role"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["License"]</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("Status", Localizer["Status"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@member.FirstName @member.LastName</strong>
                                    </td>
                                    <td>@member.Email</td>
                                    <td>@member.MobilePhoneNumber</td>
                                    <td>
                                        <span class="badge @(member.TeamRole == Cedeva.Core.Enums.TeamRole.Coordinator ? "bg-success" : "bg-primary")">
                                            @member.TeamRole
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(member.License == Cedeva.Core.Enums.License.License ? "bg-success" : "bg-warning")">
                                            @member.License
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(member.Status == Cedeva.Core.Enums.Status.Compensated ? "bg-primary" : "bg-secondary")">
                                            @(member.Status == Cedeva.Core.Enums.Status.Compensated ? Localizer["Compensated"] : Localizer["Volunteer"])
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@member.TeamMemberId" class="btn btn-sm btn-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@member.TeamMemberId" class="btn btn-sm btn-primary" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@member.TeamMemberId" class="btn btn-sm btn-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_Pagination")
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(searchString))
                    {
                        <span>@Localizer["TeamMembers.NoMembersFound"]</span>
                    }
                    else
                    {
                        <span>@Localizer["TeamMembers.NoMembersYet"]</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
