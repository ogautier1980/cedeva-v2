@model Cedeva.Website.Features.TeamMembers.ViewModels.TeamMemberViewModel
@{
    ViewData["Title"] = "Supprimer le membre d'équipe";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Supprimer le membre d'équipe</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer ce membre d'équipe ?
                        @{
                            var totalRelated = Model.ActivitiesCount + Model.ExpensesCount;
                        }
                        @if (totalRelated > 0)
                        {
                            <br />
                            <strong class="text-danger">Ce membre a @totalRelated élément(s) associé(s).</strong>
                        }
                    </div>

                    <h6 class="mb-3 text-primary"><i class="fas fa-user-tie me-2"></i>Informations du membre</h6>

                    <dl class="row">
                        <dt class="col-sm-4">Nom complet</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Téléphone</dt>
                        <dd class="col-sm-8">@Model.MobilePhoneNumber</dd>

                        <dt class="col-sm-4">Rôle</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.TeamRole == Cedeva.Core.Enums.TeamRole.Coordinator ? "bg-success" : "bg-primary")">
                                @Model.TeamRole
                            </span>
                        </dd>

                        <dt class="col-sm-4">Brevet</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.License == Cedeva.Core.Enums.License.License ? "bg-success" : "bg-warning")">
                                @Model.License
                            </span>
                        </dd>

                        <dt class="col-sm-4">Statut</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == Cedeva.Core.Enums.Status.Compensated ? "bg-info" : "bg-secondary")">
                                @(Model.Status == Cedeva.Core.Enums.Status.Compensated ? "Rémunéré" : "Bénévole")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Adresse</dt>
                        <dd class="col-sm-8">
                            @Model.Street<br />
                            @Model.PostalCode @Model.City
                        </dd>
                    </dl>

                    @if (totalRelated > 0)
                    {
                        <hr />
                        <h6 class="mb-3 text-danger"><i class="fas fa-link me-2"></i>Éléments associés</h6>
                        <ul class="list-group mb-3">
                            @if (Model.ActivitiesCount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-calendar-alt me-2"></i>Activités</span>
                                    <span class="badge bg-primary rounded-pill">@Model.ActivitiesCount</span>
                                </li>
                            }
                            @if (Model.ExpensesCount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-receipt me-2"></i>Frais</span>
                                    <span class="badge bg-success rounded-pill">@Model.ExpensesCount</span>
                                </li>
                            }
                        </ul>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="TeamMemberId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirmer la suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
