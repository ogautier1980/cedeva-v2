@model Cedeva.Website.Features.TeamMembers.ViewModels.TeamMemberViewModel
@{
    ViewData["Title"] = Localizer["TeamMembers.EditMember"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>@Localizer["TeamMembers.EditMember"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="TeamMemberId" />
                        <input type="hidden" asp-for="AddressId" />
                        <input type="hidden" asp-for="OrganisationId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h6 class="mb-3 text-primary"><i class="fas fa-user me-2"></i>@Localizer["PersonalInformation"]</h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="FirstName" class="form-label">@Localizer["Field.FirstName"]</label>
                                <input asp-for="FirstName" class="form-control" id="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="LastName" class="form-label">@Localizer["Field.LastName"]</label>
                                <input asp-for="LastName" class="form-control" id="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="NationalRegisterNumber" class="form-label">@Localizer["Field.NationalRegisterNumber"]</label>
                                <input asp-for="NationalRegisterNumber" class="form-control" placeholder="@Localizer["Children.NRNPlaceholder"]" id="NationalRegisterNumber" />
                                <span asp-validation-for="NationalRegisterNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="BirthDate" class="form-label">@Localizer["Field.BirthDate"]</label>
                                <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-phone me-2"></i>@Localizer["Contact"]</h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">@Localizer["Field.Email"]</label>
                                <input asp-for="Email" type="email" class="form-control" id="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="MobilePhoneNumber" class="form-label">@Localizer["Field.MobilePhoneNumber"]</label>
                                <input asp-for="MobilePhoneNumber" class="form-control" placeholder="@Localizer["Parents.MobilePlaceholder"]" id="MobilePhoneNumber" />
                                <span asp-validation-for="MobilePhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-map-marker-alt me-2"></i>@Localizer["Address"]</h6>

                        <div class="mb-3">
                            <label for="Street" class="form-label">@Localizer["Field.Street"]</label>
                            <input asp-for="Street" class="form-control" placeholder="@Localizer["Parents.StreetPlaceholder"]" id="Street" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="PostalCode" class="form-label">@Localizer["Field.PostalCode"]</label>
                                <input asp-for="PostalCode" type="number" class="form-control" id="PostalCode" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-8 mb-3">
                                <label for="City" class="form-label">@Localizer["Field.City"]</label>
                                <input asp-for="City" class="form-control" id="City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-briefcase me-2"></i>@Localizer["TeamMembers.ProfessionalInformation"]</h6>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="TeamRole" class="form-label">@Localizer["Field.TeamRole"]</label>
                                <select asp-for="TeamRole" class="form-select" asp-items="Html.GetEnumSelectList<Cedeva.Core.Enums.TeamRole>()" id="TeamRole">
                                    <option value="">@Localizer["TeamMembers.SelectRole"]</option>
                                </select>
                                <span asp-validation-for="TeamRole" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="License" class="form-label">@Localizer["Field.License"]</label>
                                <select asp-for="License" class="form-select" asp-items="Html.GetEnumSelectList<Cedeva.Core.Enums.License>()" id="License">
                                    <option value="">@Localizer["TeamMembers.SelectLicense"]</option>
                                </select>
                                <span asp-validation-for="License" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="Status" class="form-label">@Localizer["Field.Status"]</label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<Cedeva.Core.Enums.Status>()" id="Status">
                                    <option value="">@Localizer["TeamMembers.SelectStatus"]</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="LicenseUrl" class="form-label">@Localizer["Field.LicenseUrl"]</label>
                                <input asp-for="LicenseUrl" class="form-control" placeholder="https://..." id="LicenseUrl" />
                                <span asp-validation-for="LicenseUrl" class="text-danger"></span>
                                <div class="form-text">@Localizer["TeamMembers.LicenseUrlHelp"]</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="DailyCompensation" class="form-label">@Localizer["Field.DailyCompensation"]</label>
                                <div class="input-group">
                                    <input asp-for="DailyCompensation" type="number" step="0.01" class="form-control" id="DailyCompensation" />
                                    <span class="input-group-text">â‚¬</span>
                                </div>
                                <span asp-validation-for="DailyCompensation" class="text-danger"></span>
                                <div class="form-text">@Localizer["TeamMembers.DailyCompensationHelp"]</div>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Country" />

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary text-nowrap">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary text-nowrap">
                                <i class="fas fa-save me-2"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
