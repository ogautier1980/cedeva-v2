@model Cedeva.Website.Features.Home.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = Localizer["Home.Dashboard"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tachometer-alt me-2"></i>@Localizer["Home.Dashboard"]</h2>
        <div class="text-muted">
            <i class="fas fa-clock me-1"></i>@DateTime.Now.ToString("dddd dd MMMM yyyy")
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 stats-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">@Localizer["Home.ActiveActivities"]</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.ActiveActivities / @Model.TotalActivities</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 stats-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">@Localizer["Home.ConfirmedBookings"]</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.ConfirmedBookings / @Model.TotalBookings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 stats-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">@Localizer["Home.ChildrenParents"]</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalChildren / @Model.TotalParents</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-child fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 stats-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">@Localizer["Home.TeamMembers"]</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalTeamMembers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities and Bookings -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>@Localizer["Home.RecentActivities"]</h6>
                    <a href="/Activities" class="btn btn-sm btn-primary">@Localizer["Home.ViewAll"]</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <a href="/Activities/Details/@activity.ActivityId" class="list-group-item list-group-item-action border-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@activity.Name</h6>
                                        <small class="text-muted">@activity.BookingsCount @Localizer["Home.BookingsCount"]</small>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @activity.StartDate.ToString("dd/MM/yyyy") - @activity.EndDate.ToString("dd/MM/yyyy")
                                    </small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>@Localizer["Home.NoActivities"]
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>@Localizer["Home.RecentBookings"]</h6>
                    <a href="/Bookings" class="btn btn-sm btn-primary">@Localizer["Home.ViewAll"]</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentBookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.RecentBookings)
                            {
                                <a href="/Bookings/Details/@booking.BookingId" class="list-group-item list-group-item-action border-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@booking.ChildName</h6>
                                        <span class="badge @(booking.IsConfirmed ? "bg-success" : "bg-warning")">
                                            @(booking.IsConfirmed ? @Localizer["Bookings.Confirmed"] : @Localizer["Bookings.Pending"])
                                        </span>
                                    </div>
                                    <small class="text-muted">@booking.ActivityName</small><br />
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@booking.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>@Localizer["Home.NoBookings"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>@Localizer["Home.QuickActions"]</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="/Activities/Create" class="btn btn-outline-primary w-100">
                                <i class="fas fa-plus me-2"></i>@Localizer["Home.NewActivity"]
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Bookings/Create" class="btn btn-outline-success w-100">
                                <i class="fas fa-plus me-2"></i>@Localizer["Home.NewBooking"]
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Children/Create" class="btn btn-outline-info w-100">
                                <i class="fas fa-plus me-2"></i>@Localizer["Home.NewChild"]
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Parents/Create" class="btn btn-outline-warning w-100">
                                <i class="fas fa-plus me-2"></i>@Localizer["Home.NewParent"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
