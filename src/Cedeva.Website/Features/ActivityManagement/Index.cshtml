@model Cedeva.Website.Features.ActivityManagement.ViewModels.IndexViewModel

@{
    ViewData["Title"] = Localizer["ActivityManagement"];
}

@await Html.PartialAsync("Shared/_AlertMessages")
<div class="container-fluid">
    <div class="text-center mb-4">
        <h1 class="fw-bold">@Model.Activity.Name</h1>
        <p class="text-muted">
            @string.Format(Localizer["ActivityManagement.Period"].Value, Model.Activity.StartDate.ToString("dd/MM/yyyy"), Model.Activity.EndDate.ToString("dd/MM/yyyy"))
        </p>
    </div>

    <div class="row g-4">
        <!-- Inscriptions en attente -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form asp-action="BeginUnconfirmedBookings" asp-controller="ActivityManagement" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Activity.Id" />
                <button type="submit" class="btn-as-link">
                    <div class="shadow-sm border contour">
                        <i class="fa-solid fa-list-check fa-big"></i>
                        <p class="mt-3 mb-0">@Localizer["ActivityManagement.PendingBookings"]</p>
                    </div>
                </button>
            </form>
        </div>

        <!-- Présences -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form asp-action="BeginPresences" asp-controller="ActivityManagement" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Activity.Id" />
                <button type="submit" class="btn-as-link">
                    <div class="shadow-sm border contour">
                        <i class="fa-solid fa-clipboard-check fa-big"></i>
                        <p class="mt-3 mb-0">@Localizer["Presences"]</p>
                    </div>
                </button>
            </form>
        </div>

        <!-- Comptes -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form asp-action="BeginFinancial" asp-controller="Financial" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Activity.Id" />
                <button type="submit" class="btn-as-link">
                    <div class="shadow-sm border contour">
                        <i class="fa-regular fa-money-bill-1 fa-big"></i>
                        <p class="mt-3 mb-0">@Localizer["ActivityManagement.Accounts"]</p>
                    </div>
                </button>
            </form>
        </div>

        <!-- E-mails -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form asp-action="BeginSendEmail" asp-controller="ActivityManagement" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Activity.Id" />
                <button type="submit" class="btn-as-link">
                    <div class="shadow-sm border contour">
                        <i class="fa-solid fa-envelope fa-big"></i>
                        <p class="mt-3 mb-0">@Localizer["ActivityManagement.Emails"]</p>
                    </div>
                </button>
            </form>
        </div>

        <!-- Excursions (placeholder) -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <a href="#">
                <div class="shadow-sm border contour">
                    <i class="fa-solid fa-train fa-big"></i>
                    <p class="mt-3 mb-0">@Localizer["ActivityManagement.Excursions"]</p>
                </div>
            </a>
        </div>

        <!-- Équipe -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <form asp-action="BeginTeamMembers" asp-controller="ActivityManagement" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Activity.Id" />
                <button type="submit" class="btn-as-link">
                    <div class="shadow-sm border contour">
                        <i class="fa-solid fa-people-group fa-big"></i>
                        <p class="mt-3 mb-0">@Localizer["ActivityManagement.Team"]</p>
                    </div>
                </button>
            </form>
        </div>

        <!-- ONE -->
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <a href="#">
                <div class="shadow-sm border contour">
                    <img class="img-fluid" src="~/images/one-carre.png" width="170px" style="margin-top: 5px;" alt="ONE">
                </div>
            </a>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mt-5">
        <div class="col-12">
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center mb-3">
            <a class="btn btn-primary" asp-controller="Activities" asp-action="Details" asp-route-id="@Model.Activity.Id">
                <i class="fa-solid fa-gear"></i> @Localizer["ActivityManagement.Settings"]
            </a>
        </div>
        <div class="col-12 text-center mb-5">
            <a class="btn btn-danger" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-arrow-right-from-bracket"></i> @Localizer["ActivityManagement.Exit"]
            </a>
        </div>
    </div>
</div>
