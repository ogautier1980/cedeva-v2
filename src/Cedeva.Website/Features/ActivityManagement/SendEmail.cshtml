@model Cedeva.Website.Features.ActivityManagement.ViewModels.SendEmailViewModel
@inject Cedeva.Core.Interfaces.IEmailVariableReplacementService VariableService
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    ViewData["Title"] = Localizer["Email.SendTargeted"] + " - " + Model.ActivityName;
    ViewData["ActivityId"] = Model.ActivityId;
    ViewData["ActivityName"] = Model.ActivityName;
    ViewData["NavSection"] = "Emails";
    ViewData["NavAction"] = "SendEmail";
    var availableVariables = VariableService.GetAvailableVariables();
    bool hasTemplates = ViewBag.Templates != null && ((dynamic)ViewBag.Templates).Count > 0;
}


<div class="container-fluid py-4">
    @await Html.PartialAsync("_AlertMessages")
    <div class="row">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body">
                    <form asp-action="SendEmail" method="post" enctype="multipart/form-data" id="sendEmailForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ActivityId" />
                        <input type="hidden" asp-for="ActivityName" />

                        <!-- Recipient filter -->
                        <div class="mb-3">
                            <label for="SelectedRecipient" class="form-label">@Localizer["Email.Recipient"]</label>
                            <select asp-for="SelectedRecipient" asp-items="Model.RecipientOptions" class="form-select" id="SelectedRecipient">
                                <option value="">@Localizer["Email.SelectRecipient"]</option>
                            </select>
                            <span asp-validation-for="SelectedRecipient" class="text-danger"></span>
                        </div>

                        <!-- Day filter -->
                        <div class="mb-3">
                            <label for="SelectedDayId" class="form-label">@Localizer["Email.ScheduledForDay"]</label>
                            <select asp-for="SelectedDayId" asp-items="Model.DayOptions" class="form-select" id="SelectedDayId">
                                <option value="">@Localizer["Email.AllDays"]</option>
                            </select>
                            <div class="form-text">@Localizer["Email.DayFilterHelp"]</div>
                        </div>

                        <!-- Template selector -->
                        @if (hasTemplates)
                        {
                            <div class="mb-3">
                                <label for="templateSelect" class="form-label">@Localizer["Email.UseTemplate"]</label>
                                <div class="input-group">
                                    <select class="form-select" id="templateSelect">
                                        <option value="">@Localizer["Email.NoTemplate"]</option>
                                        @foreach (dynamic tmpl in ViewBag.Templates)
                                        {
                                            <option value="@tmpl.Id">
                                                @tmpl.Name
                                                @if (tmpl.IsDefault) { <span>(default)</span> }
                                                - @Localizer[$"EmailTemplateType.{tmpl.TemplateType}"]
                                            </option>
                                        }
                                    </select>
                                    <button type="button" class="btn btn-outline-primary" id="loadTemplateBtn">
                                        <i class="fas fa-download me-1"></i>@Localizer["Email.LoadTemplate"]
                                    </button>
                                </div>
                            </div>
                        }

                        <!-- Subject -->
                        <div class="mb-3">
                            <label for="Subject" class="form-label">@Localizer["Email.Subject"]</label>
                            <input asp-for="Subject" class="form-control" placeholder="@Localizer["Email.SubjectPlaceholder"]" id="Subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <!-- Message -->
                        <div class="mb-3">
                            <label for="Message" class="form-label">@Localizer["Email.Message"]</label>

                            <!-- Tabs Code/Aperçu -->
                            <ul class="nav nav-tabs mb-2" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="msg-code-tab" data-bs-toggle="tab" data-bs-target="#msg-code-pane" type="button" role="tab">
                                        <i class="fas fa-code"></i> Code HTML
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="msg-preview-tab" data-bs-toggle="tab" data-bs-target="#msg-preview-pane" type="button" role="tab">
                                        <i class="fas fa-eye"></i> Aperçu
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content border border-top-0 p-3">
                                <!-- Code Tab -->
                                <div class="tab-pane fade show active" id="msg-code-pane" role="tabpanel">
                                    <!-- Toolbar -->
                                    <div class="btn-toolbar mb-2" role="toolbar">
                                        <div class="btn-group btn-group-sm me-2" role="group">
                                            <button type="button" class="btn btn-outline-secondary" data-tag="<h2 style='color:#007faf;'>|</h2>" title="Titre">
                                                <i class="fas fa-heading"></i> H2
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" data-tag="<strong>|</strong>" title="Gras">
                                                <i class="fas fa-bold"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" data-tag="<em>|</em>" title="Italique">
                                                <i class="fas fa-italic"></i>
                                            </button>
                                        </div>
                                        <div class="btn-group btn-group-sm me-2" role="group">
                                            <button type="button" class="btn btn-outline-secondary" data-tag="<p>|</p>" title="Paragraphe">
                                                <i class="fas fa-paragraph"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" data-tag="<br>" title="Saut de ligne">
                                                <i class="fas fa-arrow-turn-down"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <textarea asp-for="Message" class="form-control" rows="10" id="Message" style="font-family: 'Courier New', monospace; font-size: 13px;"></textarea>
                                </div>

                                <!-- Preview Tab -->
                                <div class="tab-pane fade" id="msg-preview-pane" role="tabpanel">
                                    <div id="msgPreview" class="p-3 bg-light" style="min-height: 300px; border: 1px solid #dee2e6;"></div>
                                </div>
                            </div>

                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <!-- Send per child checkbox -->
                        <div class="mb-3 form-check">
                            <input asp-for="SendSeparateEmailPerChild" class="form-check-input" id="SendSeparateEmailPerChild" />
                            <label asp-for="SendSeparateEmailPerChild" class="form-check-label"></label>
                            <div class="form-text">
                                <span id="perChildInfo" class="text-muted">@Localizer["Email.PerChildInfo"]</span>
                                <span id="perParentInfo" class="text-muted d-none">@Localizer["Email.PerParentInfo"]</span>
                            </div>
                        </div>

                        <!-- Attachment -->
                        <div class="mb-3">
                            <label for="AttachmentFile" class="form-label">@Localizer["Email.Attachment"]</label>
                            <input asp-for="AttachmentFile" type="file" class="form-control" id="AttachmentFile" />
                            <span asp-validation-for="AttachmentFile" class="text-danger"></span>
                            <div class="form-text">@Localizer["Email.AttachmentFormats"]</div>
                        </div>

                        <!-- Action buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> @Localizer["Send"]
                            </button>
                            <a asp-action="Index" asp-route-id="@Model.ActivityId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> @Localizer["Cancel"]
                            </a>
                            <a asp-action="SentEmails" asp-route-id="@Model.ActivityId" class="btn btn-outline-info ms-auto">
                                <i class="fas fa-history"></i> @Localizer["Email.SentHistory"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right column: Variable legend -->
        <div class="col-lg-5">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-code me-2"></i>@Localizer["Email.MergeFields"]
                    </h5>
                </div>
                <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                    <p class="small text-muted">@Localizer["Email.MergeFieldsHelp"]</p>
                    <table class="table table-sm table-hover">
                        <thead class="table-light">
                            <tr>
                                <th class="small">@Localizer["EmailTemplate.Variable"]</th>
                                <th class="small">@Localizer["EmailTemplate.Description"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variable in availableVariables)
                            {
                                <tr class="variable-row" style="cursor: pointer;" data-variable="@variable.Key">
                                    <td><code class="text-success">@variable.Key</code></td>
                                    <td><small>@variable.Value</small></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Info card -->
            <div class="card bg-light mt-3">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-info-circle"></i> @Localizer["Information"]
                </div>
                <div class="card-body">
                    <h6 class="fw-bold">@Localizer["Email.Options"]</h6>
                    <ul class="mb-3">
                        <li><strong>@Localizer["Email.AllParents"]</strong> : @Localizer["Email.AllParentsDesc"]</li>
                        <li><strong>@Localizer["Email.MedicalSheetReminder"]</strong> : @Localizer["Email.MedicalSheetDesc"]</li>
                        <li><strong>@Localizer["Email.Group"]</strong> : @Localizer["Email.GroupDesc"]</li>
                    </ul>

                    <h6 class="fw-bold">@Localizer["Email.Tips"]</h6>
                    <ul class="mb-0">
                        <li>@Localizer["Email.Tip1"]</li>
                        <li>@Localizer["Email.Tip2"]</li>
                        <li>@Localizer["Email.Tip3"]</li>
                        <li>@Localizer["Email.Tip4"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        const messageEditor = document.getElementById('Message');
        const messagePreview = document.getElementById('msgPreview');
        const subjectInput = document.getElementById('Subject');

        // Function to insert text at cursor position
        function insertAtCursor(targetElement, text) {
            const start = targetElement.selectionStart;
            const end = targetElement.selectionEnd;
            const before = targetElement.value.substring(0, start);
            const after = targetElement.value.substring(end);

            // If tag contains |, insert selected text inside
            if (text.includes('|')) {
                const selected = targetElement.value.substring(start, end);
                text = text.replace('|', selected || '');
            }

            targetElement.value = before + text + after;

            // Move cursor
            const newPos = start + text.length;
            targetElement.setSelectionRange(newPos, newPos);
            targetElement.focus();
        }

        // Formatting buttons
        document.querySelectorAll('[data-tag]').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                insertAtCursor(messageEditor, this.dataset.tag);
            });
        });

        // Variable insertion (into Subject or Message)
        document.querySelectorAll('.variable-row').forEach(row => {
            row.addEventListener('click', function () {
                const variable = this.dataset.variable;

                // Insert into active element (Subject or Message)
                if (document.activeElement === subjectInput) {
                    insertAtCursor(subjectInput, variable + ' ');
                } else {
                    insertAtCursor(messageEditor, variable + ' ');
                }
            });
        });

        // Update preview when switching to preview tab
        document.getElementById('msg-preview-tab').addEventListener('shown.bs.tab', function() {
            messagePreview.innerHTML = messageEditor.value;
        });

        // Load template via AJAX
        document.getElementById('loadTemplateBtn')?.addEventListener('click', function () {
            const templateSelect = document.getElementById('templateSelect');
            const templateId = templateSelect?.value;

            if (!templateId) {
                alert('@Localizer["Email.SelectTemplateFirst"]');
                return;
            }

            fetch('/EmailTemplates/GetTemplate/' + templateId)
                .then(response => {
                    if (!response.ok) throw new Error('Template not found');
                    return response.json();
                })
                .then(data => {
                    // Fill Subject
                    subjectInput.value = data.subject;

                    // Fill Message textarea
                    messageEditor.value = data.htmlContent;
                })
                .catch(err => {
                    alert('@Localizer["Email.TemplateLoadError"]');
                });
        });

        // Toggle per-child / per-parent info text
        document.getElementById('SendSeparateEmailPerChild').addEventListener('change', function () {
            document.getElementById('perChildInfo').classList.toggle('d-none', !this.checked);
            document.getElementById('perParentInfo').classList.toggle('d-none', this.checked);
        });
    </script>
}
