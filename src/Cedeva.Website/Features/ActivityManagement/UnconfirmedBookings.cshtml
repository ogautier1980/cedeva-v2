@model Cedeva.Website.Features.ActivityManagement.ViewModels.UnconfirmedBookingsViewModel

@{
    ViewData["Title"] = "Inscriptions en attente";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Inscriptions en attente</h2>
        <p class="text-muted">Activité: @Model.Activity.Name</p>
    </div>
    <div>
        <a asp-action="Index" asp-route-id="@Model.Activity.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (!Model.UnconfirmedBookings.Any())
        {
            <div class="alert alert-info mb-0">
                <i class="fas fa-info-circle me-2"></i>Aucune inscription en attente de confirmation.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Enfant</th>
                            <th>Parent</th>
                            <th>Date d'inscription</th>
                            <th style="width: 250px;">Groupe</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.UnconfirmedBookings)
                        {
                            <tr>
                                <td>
                                    <strong>@booking.Child?.FirstName @booking.Child?.LastName</strong>
                                    @if (booking.Child?.BirthDate != null)
                                    {
                                        <br><small class="text-muted">Né(e) le @booking.Child.BirthDate.ToString("dd/MM/yyyy")</small>
                                    }
                                </td>
                                <td>
                                    @if (booking.Child?.Parent != null)
                                    {
                                        <span>@booking.Child.Parent.FirstName @booking.Child.Parent.LastName</span>
                                        <br><small class="text-muted">@booking.Child.Parent.Email</small>
                                    }
                                </td>
                                <td>
                                    @booking.BookingDate.ToString("dd/MM/yyyy")
                                </td>
                                <form asp-action="ConfirmBooking" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookingId" value="@booking.Id" />
                                    <td>
                                        <select name="groupId" class="form-select form-select-sm" required>
                                            <option value="0">-- Sélectionner un groupe --</option>
                                            @foreach (var option in Model.GroupOptions)
                                            {
                                                <option value="@option.Value">@option.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td class="text-end">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i> Confirmer
                                        </button>
                                    </td>
                                </form>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-warning mt-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>@Model.UnconfirmedBookings.Count()</strong> inscription(s) en attente de confirmation.
            </div>
        }
    </div>
</div>
