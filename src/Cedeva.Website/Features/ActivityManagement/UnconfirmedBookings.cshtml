@model Cedeva.Website.Features.ActivityManagement.ViewModels.UnconfirmedBookingsViewModel

@{
    ViewData["Title"] = Localizer["ActivityManagement.PendingBookings"];
    ViewData["ActivityId"] = Model.Activity.Id;
    ViewData["ActivityName"] = Model.Activity.Name;
    ViewData["NavSection"] = "PendingBookings";
}


@await Html.PartialAsync("_AlertMessages")
<div class="card shadow mt-3">
    <div class="card-body">
        @if (!Model.UnconfirmedBookings.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
                <p class="text-muted">@Localizer["ActivityManagement.NoPendingBookings"]</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Child"]</th>
                            <th>@Localizer["Parent"]</th>
                            <th>@Localizer["ActivityManagement.RegistrationDate"]</th>
                            <th style="width: 250px;">@Localizer["Group"]</th>
                            <th class="text-end">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.UnconfirmedBookings)
                        {
                            <tr>
                                <td>
                                    <strong>@booking.Child?.FirstName @booking.Child?.LastName</strong>
                                    @if (booking.Child?.BirthDate != null)
                                    {
                                        <br><small class="text-muted">@Localizer["ActivityManagement.BornOn"] @booking.Child.BirthDate.ToString("dd/MM/yyyy")</small>
                                    }
                                </td>
                                <td>
                                    @if (booking.Child?.Parent != null)
                                    {
                                        <span>@booking.Child.Parent.FirstName @booking.Child.Parent.LastName</span>
                                        <br><small class="text-muted">@booking.Child.Parent.Email</small>
                                    }
                                </td>
                                <td>
                                    @booking.BookingDate.ToString("dd/MM/yyyy")
                                </td>
                                <form asp-action="ConfirmBooking" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookingId" value="@booking.Id" />
                                    <td>
                                        <select name="groupId" class="form-select form-select-sm" required>
                                            <option value="0">@Localizer["ActivityManagement.SelectGroup"]</option>
                                            @foreach (var option in Model.GroupOptions)
                                            {
                                                <option value="@option.Value">@option.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td class="text-end">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i> @Localizer["Confirm"]
                                        </button>
                                    </td>
                                </form>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-warning mt-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>@Model.UnconfirmedBookings.Count()</strong> @Localizer["ActivityManagement.PendingCount"]
            </div>
        }
    </div>
</div>
