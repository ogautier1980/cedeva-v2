@model Cedeva.Website.Features.ActivityManagement.ViewModels.GroupAssignmentViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Cedeva.Website.Localization.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["ActivityManagement.GroupAssignment"];
}

@await Html.PartialAsync("_AlertMessages")

@Html.AntiForgeryToken()

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>@Localizer["ActivityManagement.GroupAssignment"]</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
    </a>
</div>

<div class="card mb-3">
    <div class="card-header bg-light">
        <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>@Model.ActivityName</h6>
    </div>
</div>

@if (!Model.UnassignedChildren.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
        <p class="text-muted">@Localizer["ActivityManagement.AllChildrenAssigned"]</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToDashboard"]
        </a>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h6 class="mb-0 text-white">
                <i class="fas fa-user-friends me-2"></i>@Localizer["ActivityManagement.UnassignedChildren"]
                <span class="badge bg-danger ms-2" id="unassigned-count">@Model.UnassignedChildren.Count</span>
            </h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Field.FirstName"]</th>
                            <th>@Localizer["Field.LastName"]</th>
                            <th>@Localizer["Field.Age"]</th>
                            <th class="text-end">@Localizer["Field.Group"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var child in Model.UnassignedChildren)
                        {
                            <tr id="booking-row-@child.BookingId">
                                <td>@child.FirstName</td>
                                <td>@child.LastName</td>
                                <td>@child.Age</td>
                                <td class="text-end">
                                    <div class="d-flex align-items-center justify-content-end">
                                        <select class="form-select form-select-sm me-2"
                                                style="max-width: 200px;"
                                                data-booking-id="@child.BookingId"
                                                onchange="assignToGroup(this)">
                                            <option value="">@Localizer["ActivityManagement.SelectGroup"]</option>
                                            @foreach (var option in Model.GroupOptions)
                                            {
                                                <option value="@option.Value">@option.Text</option>
                                            }
                                        </select>
                                        <span class="assignment-status" id="status-@child.BookingId"></span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        async function assignToGroup(selectElement) {
            const bookingId = selectElement.getAttribute('data-booking-id');
            const groupId = selectElement.value;
            const statusSpan = document.getElementById('status-' + bookingId);

            if (!groupId) {
                return;
            }

            // Show loading spinner
            statusSpan.innerHTML = '<i class="fas fa-spinner fa-spin text-primary"></i>';
            selectElement.disabled = true;

            try {
                const response = await fetch('@Url.Action("AssignToGroup", "ActivityManagement")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        bookingId: parseInt(bookingId),
                        groupId: parseInt(groupId)
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Show success checkmark briefly
                    statusSpan.innerHTML = '<i class="fas fa-check text-success"></i>';

                    // Update badge count
                    const badge = document.getElementById('unassigned-count');
                    const currentCount = parseInt(badge.textContent);
                    const newCount = currentCount - 1;
                    badge.textContent = newCount;

                    // Hide badge if count reaches 0
                    if (newCount === 0) {
                        badge.style.display = 'none';
                    }

                    // Remove row after 1 second
                    setTimeout(() => {
                        const row = document.getElementById('booking-row-' + bookingId);
                        row.style.transition = 'opacity 0.3s';
                        row.style.opacity = '0';
                        setTimeout(() => {
                            row.remove();

                            // Check if all children are assigned
                            const remainingRows = document.querySelectorAll('tbody tr');
                            if (remainingRows.length === 0) {
                                location.reload(); // Reload to show empty state
                            }
                        }, 300);
                    }, 1000);
                } else {
                    // Show error
                    statusSpan.innerHTML = '<i class="fas fa-times text-danger"></i>';
                    selectElement.disabled = false;
                    selectElement.value = '';
                    alert(result.message || '@Localizer["Message.ErrorOccurred"]');

                    // Clear error icon after 3 seconds
                    setTimeout(() => {
                        statusSpan.innerHTML = '';
                    }, 3000);
                }
            } catch (error) {
                console.error('Error assigning to group:', error);
                statusSpan.innerHTML = '<i class="fas fa-times text-danger"></i>';
                selectElement.disabled = false;
                selectElement.value = '';
                alert('@Localizer["Message.ErrorOccurred"]');

                // Clear error icon after 3 seconds
                setTimeout(() => {
                    statusSpan.innerHTML = '';
                }, 3000);
            }
        }
    </script>
}
