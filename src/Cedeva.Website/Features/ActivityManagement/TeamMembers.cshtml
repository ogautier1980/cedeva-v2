@model Cedeva.Website.Features.ActivityManagement.ViewModels.TeamMembersViewModel

@{
    ViewData["Title"] = Localizer["TeamMembers"] + " - " + Model.Activity.Name;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">@Model.Activity.Name<</h2>
            <p class="text-muted mb-0">@Localizer["ActivityManagement.TeamManagement"]</p>
        <</div>
        <a asp-action="Index" asp-route-id="@Model.Activity.Id" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> @Localizer["BackToDashboard"]
        </a>
    <</div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <</div>
    }

    <div class="row">
        <!-- Assigned Team Members -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> @Localizer["ActivityManagement.AssignedTeam"] (@Model.AssignedTeamMembers.Count())<</h5>
                <</div>
                <div class="card-body">
                    @if (!Model.AssignedTeamMembers.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> @Localizer["ActivityManagement.NoAssignedMembers"]
                        <</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["Name"]<</th>
                                        <th>@Localizer["Role"]<</th>
                                        <th>@Localizer["License"]<</th>
                                        <th>@Localizer["Status"]<</th>
                                        <th class="text-end">@Localizer["Actions"]<</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.AssignedTeamMembers.OrderBy(m => m.LastName))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@member.FirstName @member.LastName</strong>
                                                @if (!string.IsNullOrEmpty(member.Email))
                                                {
                                                    <br />
                                                    <small class="text-muted">
                                                        <i class="fas fa-envelope"></i> @member.Email
                                                    </small>
                                                }
                                            <</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @Localizer.GetLocalizedEnum(member.TeamRole)
                                                </span>
                                            <</td>
                                            <td>
                                                @if (member.License != License.NoLicense)
                                                {
                                                    <span class="badge bg-success">
                                                        @Localizer.GetLocalizedEnum(member.License)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            <</td>
                                            <td>
                                                <span class="badge @(member.Status == Status.Compensated ? "bg-success" : "bg-info")">
                                                    @Localizer.GetLocalizedEnum(member.Status)
                                                </span>
                                            <</td>
                                            <td class="text-end">
                                                <form asp-action="RemoveTeamMember" method="post" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@Model.Activity.Id" />
                                                    <input type="hidden" name="teamMemberId" value="@member.TeamMemberId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('@string.Format(Localizer["ActivityManagement.RemoveConfirm"].Value, member.FirstName + " " + member.LastName)');">
                                                        <i class="fas fa-user-minus"></i> @Localizer["Remove"]
                                                    </button>
                                                </form>
                                            <</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        <</div>
                    }
                <</div>
            <</div>
        <</div>

        <!-- Available Team Members -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus"></i> @Localizer["ActivityManagement.AvailableMembers"] (@Model.AvailableTeamMembers.Count())<</h5>
                <</div>
                <div class="card-body">
                    @if (!Model.AvailableTeamMembers.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> @Localizer["ActivityManagement.AllMembersAssigned"]
                        <</div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var member in Model.AvailableTeamMembers.OrderBy(m => m.LastName))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@member.FirstName @member.LastName</strong>
                                        <br />
                                        <small class="text-muted">
                                            <i class="fas fa-tag"></i> @Localizer.GetLocalizedEnum(member.TeamRole)
                                            @if (member.License != License.NoLicense)
                                            {
                                                <span class="ms-2">
                                                    <i class="fas fa-certificate"></i> @Localizer.GetLocalizedEnum(member.License)
                                                </span>
                                            }
                                        </small>
                                    <</div>
                                    <form asp-action="AddTeamMember" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Activity.Id" />
                                        <input type="hidden" name="teamMemberId" value="@member.TeamMemberId" />
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-plus"></i> @Localizer["Add"]
                                        </button>
                                    </form>
                                <</div>
                            }
                        <</div>
                    }
                <</div>
            <</div>
        <</div>
    <</div>
<</div>
