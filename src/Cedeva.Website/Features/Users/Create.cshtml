@model Cedeva.Website.Features.Users.ViewModels.UserViewModel

@{
    ViewData["Title"] = Localizer["Users.NewUser"];
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>@Localizer["Users.NewUser"]<</h5>
            <</div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"><</div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"><</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        <</div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"><</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        <</div>
                    <</div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"><</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    <</div>

                    <div class="mb-3">
                        <label asp-for="OrganisationId" class="form-label"><</label>
                        <select asp-for="OrganisationId" class="form-select" asp-items="ViewBag.Organisations">
                            <option value="">@Localizer["SelectOrganisationOptional"]<</option>
                        </select>
                        <span asp-validation-for="OrganisationId" class="text-danger"></span>
                    <</div>

                    <div class="mb-3">
                        <label asp-for="Role" class="form-label"><</label>
                        <select asp-for="Role" class="form-select">
                            <option value="@Cedeva.Core.Enums.Role.Coordinator">@Localizer["Enum.Role.Coordinator"]<</option>
                            <option value="@Cedeva.Core.Enums.Role.Admin">@Localizer["Enum.Role.Admin"]<</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    <</div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"><</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">Minimum 8 caractères</small>
                        <</div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label"><</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <</div>
                    <</div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" />
                            <label asp-for="EmailConfirmed" class="form-check-label"><</label>
                        <</div>
                        <small class="form-text text-muted">Si coché, l'utilisateur peut se connecter immédiatement sans confirmation d'email</small>
                    <</div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary text-nowrap">
                            <i class="fas fa-times me-1"></i>@Localizer["Cancel"]
                        </a>
                        <button type="submit" class="btn btn-primary text-nowrap">
                            <i class="fas fa-save me-1"></i>@Localizer["Users.CreateUser"]
                        </button>
                    <</div>
                </form>
            <</div>
        <</div>
    <</div>
<</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
