@model IEnumerable<Cedeva.Website.Features.Users.ViewModels.UserViewModel>
@{
    ViewData["Title"] = Localizer["Users"];
    var searchString = ViewData["SearchString"]?.ToString() ?? "";
    var organisationId = (int?)ViewData["OrganisationId"];
    var pageNumber = (int)ViewData["PageNumber"]!;
    var pageSize = (int)ViewData["PageSize"]!;
    var totalPages = (int)ViewData["TotalPages"]!;
    var totalItems = (int)ViewData["TotalItems"]!;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog me-2"></i>@Localizer["Users"]</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Users.NewUser"]
            </a>
            <a asp-action="Export" asp-route-searchString="@searchString" asp-route-organisationId="@organisationId" class="btn btn-primary" title="@Localizer["ExportExcel"]">
                <i class="fas fa-file-excel"></i>
            </a>
            <a asp-action="ExportPdf" asp-route-searchString="@searchString" asp-route-organisationId="@organisationId" class="btn btn-primary" title="@Localizer["ExportPdf"]">
                <i class="fas fa-file-pdf"></i>
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_AlertMessages")
    <div class="card shadow">
        <div class="card-header">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="@Localizer["Users.SearchPlaceholder"]">
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select" name="organisationId" asp-items="ViewBag.Organisations">
                        <option value="">@Localizer["AllOrganisations"]</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>@Localizer["Filter"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("LastName", Localizer["Name"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("Email", Localizer["Email"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("OrganisationName", Localizer["Organisation"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("Role", Localizer["Role"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Status"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.LastName @user.FirstName</strong>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="fas fa-envelope me-1 text-muted"></i>@user.Email
                                            @if (!user.EmailConfirmed)
                                            {
                                                <span class="badge bg-warning text-dark ms-2">@Localizer["NotConfirmed"]</span>
                                            }
                                        </small>
                                    </td>
                                    <td><small>@user.OrganisationName</small></td>
                                    <td>
                                        @if (user.Role == Cedeva.Core.Enums.Role.Admin)
                                        {
                                            <span class="badge bg-danger">@Localizer["Enum.Role.Admin"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">@Localizer["Enum.Role.Coordinator"]</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsLockedOut)
                                        {
                                            <span class="badge bg-danger">@Localizer["LockedOut"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@Localizer["Active"]</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_Pagination")
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users-cog fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["Users.NoUsersFound"]</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>@Localizer["Users.NewUser"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            CedevaChoices.initAll('.form-select');
        });
    </script>
}
