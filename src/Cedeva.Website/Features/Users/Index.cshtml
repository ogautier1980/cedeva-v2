@model IEnumerable<Cedeva.Website.Features.Users.ViewModels.UserViewModel>

@{
    ViewData["Title"] = Localizer["Users"];
    var searchString = ViewData["SearchString"]?.ToString() ?? "";
    var organisationId = (int?)ViewData["OrganisationId"];
    var pageNumber = (int)ViewData["PageNumber"]!;
    var pageSize = (int)ViewData["PageSize"]!;
    var totalPages = (int)ViewData["TotalPages"]!;
    var totalItems = (int)ViewData["TotalItems"]!;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users-cog me-2"></i>@Localizer["Users"]/h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Nouvel utilisateur
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Filtres</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="searchString" class="form-label">@Localizer["Search"]/label>
                <input type="text" class="form-control" id="searchString" name="searchString" value="@searchString" placeholder="Nom, prénom ou email...">
            </div>
            <div class="col-md-4">
                <label for="organisationId" class="form-label">@Localizer["Organisation"]</label>
                <select class="form-select" id="organisationId" name="organisationId" asp-items="ViewBag.Organisations">
                    <option value="">@Localizer["AllOrganisations"]</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search me-1"></i>Filtrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-redo me-1"></i>Réinitialiser
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Liste des@Localizer["Users.UsersCount"] (@totalItems)</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Name"]/th>
                            <th>@Localizer["Email"]/th>
                            <th>@Localizer["Organisation"]/th>
                            <th>@Localizer["Role"]/th>
                            <th>@Localizer["Status"]</th>
                            <th class="text-end">@Localizer["Actions"]/th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>
                                    @user.Email
                                    @if (!user.EmailConfirmed)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">Non confirmé</span>
                                    }
                                </td>
                                <td>@user.OrganisationName</td>
                                <td>
                                    @if (user.Role == Cedeva.Core.Enums.Role.Admin)
                                    {
                                        <span class="badge bg-danger">@Localizer["Enum.Role.Admin"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@Localizer["Enum.Role.Coordinator"]</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="badge bg-danger">Verrouillé</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Actif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info" title="@Localizer["Details"]">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="@Localizer["Edit"]">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" title="@Localizer["Delete"]">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-organisationId="@organisationId" asp-route-pageNumber="@(pageNumber - 1)" asp-route-pageSize="@pageSize">Précédent</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-organisationId="@organisationId" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize">@i</a>
                            </li>
                        }

                        <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-organisationId="@organisationId" asp-route-pageNumber="@(pageNumber + 1)" asp-route-pageSize="@pageSize">Suivant</a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle me-2"></i>@Localizer["Users.NoUsersFound"]
            </div>
        }
    </div>
</div>
