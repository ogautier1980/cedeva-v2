@model Cedeva.Website.Features.Users.ViewModels.UserViewModel

@{
    ViewData["Title"] = Localizer["Users.UserDetails"];
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i>@Localizer["Users.UserDetails"]</h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning text-nowrap">
                        <i class="fas fa-edit me-1"></i>@Localizer["Edit"]
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger text-nowrap">
                        <i class="fas fa-trash me-1"></i>@Localizer["Delete"]
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-3">Nom complet</dt>
                    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-sm-3">@Localizer["Email"]/dt>
                    <dd class="col-sm-9">
                        @Model.Email
                        @if (!Model.EmailConfirmed)
                        {
                            <span class="badge bg-warning text-dark ms-2">Non confirmé</span>
                        }
                        else
                        {
                            <span class="badge bg-success ms-2">Confirmé</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Localizer["Organisation"]/dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.OrganisationName))
                        {
                            <a asp-controller="Organisations" asp-action="Details" asp-route-id="@Model.OrganisationId">
                                @Model.OrganisationName
                            </a>
                        }
                        else
                        {
                            <em class="text-muted">@Localizer["NoOrganisation"]</em>
                        }
                    </dd>

                    <dt class="col-sm-3">@Localizer["Role"]/dt>
                    <dd class="col-sm-9">
                        @if (Model.Role == Cedeva.Core.Enums.Role.Admin)
                        {
                            <span class="badge bg-danger">@Localizer["Enum.Role.Admin"]</span>
                        }
                        else
                        {
                            <span class="badge bg-info">@Localizer["Enum.Role.Coordinator"]</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Statut du compte</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsLockedOut)
                        {
                            <span class="badge bg-danger">Verrouillé</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Actif</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary text-nowrap">
                        <i class="fas fa-arrow-left me-1"></i>@Localizer["BackToList"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
