@model Cedeva.Website.Features.Account.ViewModels.LoginViewModel
@{
    ViewData["Title"] = Localizer["Account.Login"];
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Cedeva</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link href="~/css/cedeva.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #007faf 0%, #005a7f 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-campground fa-3x text-primary mb-3"></i>
                    <h2 class="fw-bold">Cedeva</h2>
                    <p class="text-muted">@Localizer["Account.LoginToYourAccount"]</p>
                </div>

                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">@Localizer["Field.Email"]</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="@Localizer["Account.EmailPlaceholder"]" id="Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="form-label">@Localizer["Account.Password"]</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="@Localizer["Account.Password"]" id="Password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
                        <label for="RememberMe" class="form-check-label">@Localizer["Account.RememberMe"]</label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>@Localizer["Account.Login"]
                        </button>
                    </div>

                    <div class="text-center">
                        <a asp-action="Register" class="text-decoration-none">
                            @Localizer["Account.NoAccountRegister"]
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Test Accounts -->
        <div class="card shadow-lg mt-3">
            <div class="card-body p-4">
                <h6 class="text-center fw-bold mb-3">
                    <i class="fas fa-flask me-2"></i>@Localizer["Account.TestAccounts"]
                </h6>
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-primary btn-sm text-start" onclick="fillLogin('admin@cedeva.be', 'Admin@123456')">
                        <i class="fas fa-user-shield me-2"></i>
                        <strong>Admin:</strong> admin@cedeva.be / Admin@123456
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-sm text-start" onclick="fillLogin('coordinator@cedeva.be', 'Coord@123456')">
                        <i class="fas fa-user-tie me-2"></i>
                        <strong>Coordinateur (Gembloux):</strong> coordinator@cedeva.be / Coord@123456
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-sm text-start" onclick="fillLogin('coordinator.liege@cedeva.be', 'Coord@123456')">
                        <i class="fas fa-user-tie me-2"></i>
                        <strong>Coordinateur (Li√®ge):</strong> coordinator.liege@cedeva.be / Coord@123456
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function fillLogin(email, password) {
            document.getElementById('Email').value = email;
            document.getElementById('Password').value = password;
            document.getElementById('Email').focus();
        }
    </script>
</body>
</html>
