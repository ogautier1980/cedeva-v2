@model Cedeva.Website.Features.Organisations.ViewModels.OrganisationViewModel
@{
    ViewData["Title"] = Localizer["Organisations.OrganisationDetails"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-building me-2"></i>@Localizer["Organisations.OrganisationDetails"]</h5>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary text-nowrap">
                            <i class="fas fa-edit me-1"></i>@Localizer["Edit"]
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger text-nowrap">
                            <i class="fas fa-trash me-1"></i>@Localizer["Delete"]
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.LogoUrl" alt="Logo @Model.Name" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }

                    <h6 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>@Localizer["GeneralInformation"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Name"]</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">@Localizer["Description"]</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-map-marker-alt me-2"></i>@Localizer["Address"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Street"]</dt>
                        <dd class="col-sm-8">@Model.Street</dd>

                        <dt class="col-sm-4">@Localizer["PostalCode"]</dt>
                        <dd class="col-sm-8">@Model.PostalCode</dd>

                        <dt class="col-sm-4">@Localizer["City"]</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">@Localizer["Country"]</dt>
                        <dd class="col-sm-8">@Model.Country</dd>
                    </dl>

                    <hr />

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>@Localizer["Statistics"]</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-calendar-alt me-2 text-primary"></i>@Localizer["Activities"]</span>
                            <span class="badge bg-primary rounded-pill">@Model.ActivitiesCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-users me-2 text-info"></i>@Localizer["Parents"]</span>
                            <span class="badge bg-info rounded-pill">@Model.ParentsCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-user-tie me-2 text-success"></i>@Localizer["TeamMembers"]</span>
                            <span class="badge bg-success rounded-pill">@Model.TeamMembersCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-user-shield me-2 text-warning"></i>@Localizer["Users"]</span>
                            <span class="badge bg-warning rounded-pill">@Model.UsersCount</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-link me-2"></i>@Localizer["QuickActions"]</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Activities" asp-action="Index" asp-route-organisationId="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-calendar-alt me-2"></i>@Localizer["Organisations.ViewActivities"]
                        </a>
                        <a asp-controller="Parents" asp-action="Index" asp-route-organisationId="@Model.Id" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-users me-2"></i>@Localizer["Organisations.ViewParents"]
                        </a>
                        <a asp-controller="TeamMembers" asp-action="Index" asp-route-organisationId="@Model.Id" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-user-tie me-2"></i>@Localizer["Organisations.ViewTeam"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
