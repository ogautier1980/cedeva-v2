@model Cedeva.Website.Features.Organisations.ViewModels.OrganisationViewModel
@{
    ViewData["Title"] = Localizer["Organisations.DeleteOrganisation"];
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Organisations.DeleteOrganisation"]</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>@Localizer["Organisations.DeleteWarning"]</strong> @Localizer["Organisations.DeleteConfirmation"]
                        @{
                            var totalRelated = Model.ActivitiesCount + Model.ParentsCount + Model.TeamMembersCount + Model.UsersCount;
                        }
                        @if (totalRelated > 0)
                        {
                            <br />
                            <strong class="text-danger">
                                Cette organisation a @totalRelated élément(s) associé(s).
                                La suppression entraînera la suppression en cascade de toutes les données liées !
                            </strong>
                        }
                    </div>

                    <h6 class="mb-3 text-primary"><i class="fas fa-building me-2"></i>@Localizer["Organisations.OrganisationInformation"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">Nom</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">@Localizer["Address"]/dt>
                        <dd class="col-sm-8">
                            @Model.Street<br />
                            @Model.PostalCode @Model.City
                        </dd>
                    </dl>

                    @if (totalRelated > 0)
                    {
                        <hr />
                        <h6 class="mb-3 text-danger"><i class="fas fa-link me-2"></i>Éléments associés</h6>
                        <ul class="list-group mb-3">
                            @if (Model.ActivitiesCount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-calendar-alt me-2"></i>Activités</span>
                                    <span class="badge bg-primary rounded-pill">@Model.ActivitiesCount</span>
                                </li>
                            }
                            @if (Model.ParentsCount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-users me-2"></i>Parents</span>
                                    <span class="badge bg-info rounded-pill">@Model.ParentsCount</span>
                                </li>
                            }
                            @if (Model.TeamMembersCount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-user-tie me-2"></i>Membres d'équipe</span>
                                    <span class="badge bg-success rounded-pill">@Model.TeamMembersCount</span>
                                </li>
                            }
                            @if (Model.UsersCount > 0)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-user-shield me-2"></i>Utilisateurs</span>
                                    <span class="badge bg-warning rounded-pill">@Model.UsersCount</span>
                                </li>
                            }
                        </ul>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>@Localizer["Organisations.ConfirmDeletion"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
