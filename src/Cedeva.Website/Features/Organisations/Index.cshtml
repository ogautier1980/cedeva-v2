@model IEnumerable<Cedeva.Website.Features.Organisations.ViewModels.OrganisationViewModel>
@{
    ViewData["Title"] = "Organisations";
    var searchString = ViewData["SearchString"] as string;
    var pageNumber = (int)ViewData["PageNumber"];
    var pageSize = (int)ViewData["PageSize"];
    var totalPages = (int)ViewData["TotalPages"];
    var totalItems = (int)ViewData["TotalItems"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-building me-2"></i>Organisations</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Ajouter une organisation
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="Rechercher par nom ou description..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Ville</th>
                                <th>Activités</th>
                                <th>Parents</th>
                                <th>Équipe</th>
                                <th>Utilisateurs</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var org in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@org.Name</strong><br />
                                        <small class="text-muted">@org.Description</small>
                                    </td>
                                    <td>@org.City</td>
                                    <td><span class="badge bg-primary">@org.ActivitiesCount</span></td>
                                    <td><span class="badge bg-info">@org.ParentsCount</span></td>
                                    <td><span class="badge bg-success">@org.TeamMembersCount</span></td>
                                    <td><span class="badge bg-warning">@org.UsersCount</span></td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@org.Id" class="btn btn-sm btn-info" title="Détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@org.Id" class="btn btn-sm btn-primary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@org.Id" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Affichage de @((pageNumber - 1) * pageSize + 1) à @Math.Min(pageNumber * pageSize, totalItems) sur @totalItems organisations
                        </div>
                        @if (totalPages > 1)
                        {
                            <ul class="pagination mb-0">
                                <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-pageNumber="@(pageNumber - 1)" asp-route-pageSize="@pageSize">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                                {
                                    <li class="page-item @(i == pageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize">@i</a>
                                    </li>
                                }

                                <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-pageNumber="@(pageNumber + 1)" asp-route-pageSize="@pageSize">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </nav>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(searchString))
                    {
                        <span>Aucune organisation trouvée pour votre recherche.</span>
                    }
                    else
                    {
                        <span>Aucune organisation enregistrée. Cliquez sur "Ajouter une organisation" pour commencer.</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
