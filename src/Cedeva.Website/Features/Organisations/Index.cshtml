@model IEnumerable<Cedeva.Website.Features.Organisations.ViewModels.OrganisationViewModel>
@{
    ViewData["Title"] = Localizer["Organisations"];
    var searchString = ViewData["SearchString"] as string;
    var pageNumber = (ViewData["PageNumber"] as int?) ?? 1;
    var pageSize = (ViewData["PageSize"] as int?) ?? 10;
    var totalPages = (ViewData["TotalPages"] as int?) ?? 1;
    var totalItems = (ViewData["TotalItems"] as int?) ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-building me-2"></i>@Localizer["Organisations"]</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Organisations.AddOrganisation"]
            </a>
            <a asp-action="Export" asp-route-searchString="@searchString" class="btn btn-primary" title="@Localizer["ExportExcel"]">
                <i class="fas fa-file-excel"></i>
            </a>
            <a asp-action="ExportPdf" asp-route-searchString="@searchString" class="btn btn-primary" title="@Localizer["ExportPdf"]">
                <i class="fas fa-file-pdf"></i>
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_AlertMessages")
    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="@Localizer["Search.ByNameOrDescription"]" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>@Localizer["Search.Search"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("Name", Localizer["Name"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("City", Localizer["City"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Activities"]</th>
                                <th>@Localizer["Parents"]</th>
                                <th>@Localizer["Team"]</th>
                                <th>@Localizer["Users"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var org in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@org.Name</strong><br />
                                        <small class="text-muted">@org.Description</small>
                                    </td>
                                    <td>@org.City</td>
                                    <td><span class="badge bg-primary">@org.ActivitiesCount</span></td>
                                    <td><span class="badge bg-primary">@org.ParentsCount</span></td>
                                    <td><span class="badge bg-success">@org.TeamMembersCount</span></td>
                                    <td><span class="badge bg-warning">@org.UsersCount</span></td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@org.Id" class="btn btn-sm btn-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@org.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-sm btn-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@org.Id" class="btn btn-sm btn-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_Pagination")
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(searchString))
                    {
                        <span>@Localizer["Organisations.NoOrganisationsFound"]</span>
                    }
                    else
                    {
                        <span>@Localizer["Organisations.NoOrganisationsYet"]</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
