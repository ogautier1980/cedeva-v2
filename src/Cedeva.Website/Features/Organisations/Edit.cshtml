@model Cedeva.Website.Features.Organisations.ViewModels.OrganisationViewModel
@{
    ViewData["Title"] = Localizer["Organisations.EditOrganisation"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>@Localizer["Organisations.EditOrganisation"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AddressId" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h6 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>@Localizer["GeneralInformation"]</h6>

                        <div class="mb-3">
                            <label for="Name" class="form-label">@Localizer["Field.Name"]</label>
                            <input asp-for="Name" class="form-control" id="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">@Localizer["Field.Description"]</label>
                            <textarea asp-for="Description" class="form-control" rows="3" id="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="LogoFile" class="form-label">@Localizer["Field.Logo"]</label>

                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <div class="mb-2 position-relative d-inline-block" id="logoPreview">
                                    <img src="@Model.LogoUrl" alt="Logo" class="img-thumbnail" style="max-width: 200px;" />
                                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1"
                                            id="removeLogoBtn" title="@Localizer["Field.RemoveLogo"]">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            }
                            <input asp-for="RemoveLogo" type="hidden" id="RemoveLogo" />

                            <input asp-for="LogoFile" type="file" class="form-control" id="LogoFile" accept="image/*" />
                            <span asp-validation-for="LogoFile" class="text-danger"></span>
                            <small class="form-text text-muted">@Localizer["Validation.LogoFileHelp"]</small>
                        </div>
                        <input type="hidden" asp-for="LogoUrl" />

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-map-marker-alt me-2"></i>@Localizer["Address"]</h6>

                        <div class="mb-3">
                            <label for="Street" class="form-label">@Localizer["Field.Street"]</label>
                            <input asp-for="Street" class="form-control" placeholder="@Localizer["Parents.StreetPlaceholder"]" id="Street" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CombinedAddress" class="form-label">@Localizer["Field.PostalCodeCity"]</label>
                            <input type="text" class="form-control" id="CombinedAddress"
                                   placeholder="@Localizer["Parents.PostalCodeCityPlaceholder"]"
                                   value="@(string.IsNullOrEmpty(Model.PostalCode) ? "" : Model.PostalCode + " " + Model.City)" />
                            <small class="form-text text-muted">@Localizer["Parents.PostalCodeCityHelp"]</small>
                            <input type="hidden" asp-for="PostalCode" id="PostalCode" />
                            <input type="hidden" asp-for="City" id="City" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Country" />

                        <hr />

                        <div class="d-flex justify-content-between">
                            @{
                                var returnUrl = ViewData["ReturnUrl"]?.ToString();
                                var cancelUrl = !string.IsNullOrEmpty(returnUrl) ? returnUrl : Url.Action("Index");
                            }
                            <a href="@cancelUrl" class="btn btn-outline-secondary text-nowrap">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary text-nowrap">
                                <i class="fas fa-save me-2"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/belgian-municipality-validator.js"></script>
    <script src="~/js/unified-address-autocomplete.js"></script>

    <script>
        $(function () {
            initializeUnifiedAddressAutocomplete("#CombinedAddress", "#PostalCode", "#City");

            // Handle logo removal with AJAX
            $('#removeLogoBtn').on('click', function() {
                if (confirm(@Json.Serialize(Localizer["Organisations.ConfirmDeleteLogo"].Value))) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    $.post('@Url.Action("DeleteLogo", "Organisations")',
                        {
                            id: @Model.Id,
                            __RequestVerificationToken: token
                        },
                        function() {
                            $('#logoPreview').fadeOut(300, function() {
                                $(this).remove();
                            });
                            // Show success message
                            if ($('.alert').length === 0) {
                                var successMsg = @Json.Serialize(Localizer["Organisations.LogoDeletedSuccess"].Value);
                                $('form').before('<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                                    $('<div>').text(successMsg).html() +
                                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                            }
                        }).fail(function() {
                            alert(@Json.Serialize(Localizer["Organisations.LogoDeletedError"].Value));
                        });
                }
            });

            // Handle file selection preview
            $('#LogoFile').on('change', function(e) {
                var file = e.target.files[0];
                if (file && file.type.startsWith('image/')) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        // Remove existing previews
                        $('#logoPreview').remove();
                        $('#logoPreviewNew').remove();

                        // Create new preview
                        var preview = $('<div class="mb-2 position-relative d-inline-block" id="logoPreviewNew">' +
                            '<img src="' + e.target.result + '" alt="Logo Preview" class="img-thumbnail" style="max-width: 200px;" />' +
                            '<button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" id="clearLogoFileBtn" title="@Localizer["Field.RemoveLogo"]">' +
                            '<i class="fas fa-times"></i>' +
                            '</button>' +
                            '</div>');

                        // Insert preview before the file input
                        $('#LogoFile').before(preview);

                        // Handle clear button click
                        $('#clearLogoFileBtn').on('click', function() {
                            $('#logoPreviewNew').fadeOut(300, function() {
                                $(this).remove();
                            });
                            $('#LogoFile').val('');
                        });
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}
