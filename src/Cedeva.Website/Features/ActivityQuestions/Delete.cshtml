@model Cedeva.Website.Features.ActivityQuestions.ViewModels.ActivityQuestionViewModel
@{
    ViewData["Title"] = Localizer["ActivityQuestions.Delete"];
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash me-2"></i>@Localizer["ActivityQuestions.Delete"]</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Localizer["ActivityQuestions.DeleteWarning"]
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Field.Activity"]</dt>
                        <dd class="col-sm-8">@Model.ActivityName</dd>

                        <dt class="col-sm-4">@Localizer["ActivityQuestions.QuestionText"]</dt>
                        <dd class="col-sm-8"><strong>@Model.QuestionText</strong></dd>

                        <dt class="col-sm-4">@Localizer["ActivityQuestions.QuestionType"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Localizer[$"Enum.QuestionType.{Model.QuestionType}"]</span>
                        </dd>

                        <dt class="col-sm-4">@Localizer["ActivityQuestions.Required"]</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsRequired)
                            {
                                <span class="badge bg-danger">@Localizer["ActivityQuestions.Yes"]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Localizer["ActivityQuestions.No"]</span>
                            }
                        </dd>

                        @if (!string.IsNullOrWhiteSpace(Model.Options))
                        {
                            <dt class="col-sm-4">@Localizer["ActivityQuestions.Options"]</dt>
                            <dd class="col-sm-8">@Model.Options</dd>
                        }

                        <dt class="col-sm-4">@Localizer["ActivityQuestions.AnswersCount"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.AnswersCount > 0 ? "bg-danger" : "bg-success")">
                                @Model.AnswersCount
                            </span>
                        </dd>
                    </dl>

                    @if (Model.AnswersCount > 0)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-ban me-2"></i>
                            @Localizer["ActivityQuestions.CannotDeleteHasAnswers"]
                        </div>
                    }

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-route-activityId="@Model.ActivityId" class="btn btn-outline-secondary text-nowrap">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            @if (Model.AnswersCount == 0)
                            {
                                <button type="submit" class="btn btn-danger text-nowrap">
                                    <i class="fas fa-trash me-2"></i>@Localizer["ConfirmDelete"]
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
