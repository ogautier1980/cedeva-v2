@model IEnumerable<Cedeva.Website.Features.ActivityQuestions.ViewModels.ActivityQuestionViewModel>
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["ActivityQuestions.Title"];
    var activityName = ViewData["ActivityName"] as string;
    var activityId = ViewData["ActivityId"] as int?;
    var isSingleActivity = activityId.HasValue;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">@Localizer["ActivityQuestions.Title"]</h1>
            @if (!string.IsNullOrEmpty(activityName))
            {
                <small class="text-muted">@activityName</small>
            }
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" asp-route-activityId="@activityId" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus-circle me-2"></i>@Localizer["ActivityQuestions.CreateNew"]
            </a>
            @if (activityId.HasValue)
            {
                <button type="button" class="btn btn-outline-primary text-nowrap" data-bs-toggle="modal" data-bs-target="#importModal">
                    <i class="fas fa-file-import me-2"></i>@Localizer["ActivityQuestions.Import.Button"]
                </button>
                <a asp-controller="Activities" asp-action="Details" asp-route-id="@activityId" class="btn btn-outline-secondary text-nowrap">
                    <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
                </a>
            }
        </div>
    </div>

    @await Html.PartialAsync("_AlertMessages")

    @if (!isSingleActivity && Model.Any())
    {
        <div class="alert alert-info mb-3">
            <i class="fas fa-info-circle me-2"></i>
            @Localizer["ActivityQuestions.DragDisabledMultipleActivities"]
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["ActivityQuestions.NoQuestions"]</p>
                    <a asp-action="Create" asp-route-activityId="@activityId" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>@Localizer["ActivityQuestions.CreateFirst"]
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="questionsTable">
                        <thead class="table-light">
                            <tr>
                                @if (isSingleActivity)
                                {
                                    <th style="width: 40px;"></th> @* Drag handle *@
                                }
                                <th style="width: 80px;">@Localizer["Field.Order"]</th>
                                @if (!activityId.HasValue)
                                {
                                    <th>@Localizer["Field.Activity"]</th>
                                }
                                <th>@Localizer["ActivityQuestions.QuestionText"]</th>
                                <th>@Localizer["ActivityQuestions.QuestionType"]</th>
                                <th>@Localizer["ActivityQuestions.Required"]</th>
                                <th style="width: 150px;">@Localizer["Field.Status"]</th>
                                <th style="width: 120px;" class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody id="sortableQuestions">
                            @foreach (var question in Model)
                            {
                                <tr data-question-id="@question.Id" class="@(question.IsActive ? "" : "table-secondary")">
                                    @if (isSingleActivity)
                                    {
                                        <td class="drag-handle" style="cursor: move;">
                                            <i class="fas fa-grip-vertical text-muted"></i>
                                        </td>
                                    }
                                    <td>
                                        <span class="badge bg-secondary order-badge">@question.DisplayOrder</span>
                                    </td>
                                    @if (!activityId.HasValue)
                                    {
                                        <td>@question.ActivityName</td>
                                    }
                                    <td>
                                        <strong>@question.QuestionText</strong>
                                        @if (!string.IsNullOrWhiteSpace(question.Options))
                                        {
                                            <br />
                                            <small class="text-muted">
                                                <i class="fas fa-list-ul me-1"></i>@question.Options
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@Localizer[$"Enum.QuestionType.{question.QuestionType}"]</span>
                                    </td>
                                    <td>
                                        @if (question.IsRequired)
                                        {
                                            <span class="badge bg-danger">@Localizer["ActivityQuestions.Yes"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Localizer["ActivityQuestions.No"]</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" data-question-id="@question.Id"
                                                   @(question.IsActive ? "checked" : "") onchange="toggleActive(this)" />
                                            <label class="form-check-label small status-label">
                                                @(question.IsActive ? Localizer["Active"] : Localizer["Inactive"])
                                            </label>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@question.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-outline-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@question.Id" class="btn btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Import Modal -->
@if (activityId.HasValue)
{
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">
                        <i class="fas fa-file-import me-2"></i>@Localizer["ActivityQuestions.Import.Title"]
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="importStep1">
                        <p class="text-muted">@Localizer["ActivityQuestions.Import.SelectActivity"]</p>
                        <div class="mb-3">
                            <label for="sourceActivitySelect" class="form-label">@Localizer["ActivityQuestions.Import.SourceActivity"]</label>
                            <select id="sourceActivitySelect" class="form-select">
                                <option value="">@Localizer["ActivityQuestions.Import.SelectActivityPlaceholder"]</option>
                            </select>
                        </div>
                    </div>
                    <div id="importStep2" style="display: none;">
                        <p class="text-muted">@Localizer["ActivityQuestions.Import.SelectQuestions"]</p>
                        <div class="mb-3">
                            <button type="button" class="btn btn-sm btn-outline-primary" id="selectAllBtn">
                                <i class="fas fa-check-square me-1"></i>@Localizer["ActivityQuestions.Import.SelectAll"]
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="deselectAllBtn">
                                <i class="fas fa-square me-1"></i>@Localizer["ActivityQuestions.Import.DeselectAll"]
                            </button>
                        </div>
                        <div id="questionsList" class="list-group" style="max-height: 400px; overflow-y: auto;">
                            <!-- Questions will be loaded here -->
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="button" class="btn btn-primary" id="importBtn" style="display: none;">
                        <i class="fas fa-check me-2"></i>@Localizer["ActivityQuestions.Import.Confirm"]
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        $(function () {
            // Initialize Choices.js on all selects
            CedevaChoices.initAll('.form-select');

            var isSingleActivity = @(isSingleActivity ? "true" : "false");

            // Check for success message from import
            var successMessage = sessionStorage.getItem('importSuccessMessage');
            if (successMessage) {
                toastr.success(successMessage);
                sessionStorage.removeItem('importSuccessMessage');
            }

            // Initialize SortableJS (only if single activity)
            if (isSingleActivity) {
                var sortable = Sortable.create(document.getElementById('sortableQuestions'), {
                    handle: '.drag-handle',
                    animation: 150,
                    ghostClass: 'sortable-ghost',
                    onEnd: function (evt) {
                        updateQuestionOrder();
                    }
                });
            }

            function updateQuestionOrder() {
                var updates = [];
                $('#sortableQuestions tr').each(function (index) {
                    updates.push({
                        id: $(this).data('question-id'),
                        displayOrder: index + 1
                    });
                    // Mettre à jour le badge visuellement
                    $(this).find('.order-badge').text(index + 1);
                });

                $.ajax({
                    url: '@Url.Action("UpdateOrder")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(updates),
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                            location.reload(); // Revert visual changes
                        }
                    },
                    error: function () {
                        toastr.error('@Localizer["Error.UnexpectedError"]');
                        location.reload();
                    }
                });
            }
        });

        function toggleActive(checkbox) {
            var questionId = $(checkbox).data('question-id');
            var isActive = checkbox.checked;

            $.ajax({
                url: '@Url.Action("ToggleActive")',
                type: 'POST',
                data: {
                    id: questionId,
                    isActive: isActive,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        toastr.success(response.message);
                        // Changer la classe de la ligne (gris si inactif)
                        var row = $(checkbox).closest('tr');
                        row.toggleClass('table-secondary', !isActive);
                        // Mettre à jour le label
                        var label = $(checkbox).siblings('.status-label');
                        label.text(isActive ? '@Localizer["Active"]' : '@Localizer["Inactive"]');
                    } else {
                        toastr.error(response.message);
                        // Revert checkbox
                        checkbox.checked = !isActive;
                    }
                },
                error: function () {
                    toastr.error('@Localizer["Error.UnexpectedError"]');
                    checkbox.checked = !isActive;
                }
            });
        }

        // Import functionality
        var currentActivityId = @(activityId ?? 0);

        $('#importModal').on('show.bs.modal', function () {
            // Load activities with questions
            $.ajax({
                url: '@Url.Action("GetActivitiesWithQuestions")',
                type: 'GET',
                data: { currentActivityId: currentActivityId },
                success: function (response) {
                    if (response.success && response.activities.length > 0) {
                        var select = $('#sourceActivitySelect');
                        select.empty();
                        select.append('<option value="">@Localizer["ActivityQuestions.Import.SelectActivityPlaceholder"]</option>');
                        response.activities.forEach(function (activity) {
                            select.append(`<option value="${activity.id}">${activity.name} (${activity.questionCount} @Localizer["ActivityQuestions.Import.Questions"])</option>`);
                        });
                        // Re-initialize Choices.js on dynamically populated select
                        CedevaChoices.init('#sourceActivitySelect');
                    } else {
                        toastr.warning('@Localizer["ActivityQuestions.Import.NoActivitiesWithQuestions"]');
                    }
                },
                error: function () {
                    toastr.error('@Localizer["Error.UnexpectedError"]');
                }
            });
        });

        $('#sourceActivitySelect').on('change', function () {
            var selectedActivityId = $(this).val();
            if (!selectedActivityId) {
                $('#importStep2').hide();
                $('#importBtn').hide();
                return;
            }

            // Load questions for selected activity
            $.ajax({
                url: '@Url.Action("GetQuestionsForActivity")',
                type: 'GET',
                data: { activityId: selectedActivityId },
                success: function (response) {
                    if (response.success) {
                        var questionsList = $('#questionsList');
                        questionsList.empty();

                        if (response.questions.length === 0) {
                            questionsList.append('<div class="alert alert-info">@Localizer["ActivityQuestions.Import.NoActiveQuestions"]</div>');
                            $('#importBtn').hide();
                        } else {
                            response.questions.forEach(function (question) {
                                var requiredBadge = question.isRequired ? '<span class="badge bg-danger ms-2">@Localizer["ActivityQuestions.Required"]</span>' : '';
                                var item = `
                                    <label class="list-group-item d-flex align-items-start">
                                        <input type="checkbox" class="form-check-input me-3 mt-1" value="${question.id}">
                                        <div class="flex-grow-1">
                                            <div class="fw-bold">${question.questionText}</div>
                                            <small class="text-muted">
                                                <span class="badge bg-primary">${question.questionTypeLabel}</span>
                                                ${requiredBadge}
                                                ${question.options ? '<br><i class="fas fa-list-ul me-1"></i>' + question.options : ''}
                                            </small>
                                        </div>
                                    </label>
                                `;
                                questionsList.append(item);
                            });
                            $('#importStep2').show();
                            $('#importBtn').show();
                        }
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function () {
                    toastr.error('@Localizer["Error.UnexpectedError"]');
                }
            });
        });

        $('#selectAllBtn').on('click', function () {
            $('#questionsList input[type="checkbox"]').prop('checked', true);
        });

        $('#deselectAllBtn').on('click', function () {
            $('#questionsList input[type="checkbox"]').prop('checked', false);
        });

        $('#importBtn').on('click', function () {
            var selectedQuestions = [];
            $('#questionsList input[type="checkbox"]:checked').each(function () {
                selectedQuestions.push(parseInt($(this).val()));
            });

            if (selectedQuestions.length === 0) {
                toastr.warning('@Localizer["ActivityQuestions.Import.NoQuestionsSelected"]');
                return;
            }

            // Disable button and show loading state
            var $btn = $(this);
            var originalHtml = $btn.html();
            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>@Localizer["ActivityQuestions.Import.Importing"]');

            $.ajax({
                url: '@Url.Action("ImportQuestions")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ questionIds: selectedQuestions }),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        // Store success message in TempData and reload immediately
                        sessionStorage.setItem('importSuccessMessage', response.message);
                        location.reload();
                    } else {
                        toastr.error(response.message);
                        // Restore button
                        $btn.prop('disabled', false).html(originalHtml);
                    }
                },
                error: function () {
                    toastr.error('@Localizer["Error.UnexpectedError"]');
                    // Restore button
                    $btn.prop('disabled', false).html(originalHtml);
                }
            });
        });

        // Reset modal on close
        $('#importModal').on('hidden.bs.modal', function () {
            $('#sourceActivitySelect').val('');
            $('#importStep2').hide();
            $('#importBtn').hide();
            $('#questionsList').empty();
        });
    </script>

    <style>
        .sortable-ghost {
            opacity: 0.4;
            background-color: #f0f7fb;
        }
        .drag-handle {
            cursor: move !important;
        }
        .drag-handle:hover {
            color: #007faf !important;
        }
    </style>
}
