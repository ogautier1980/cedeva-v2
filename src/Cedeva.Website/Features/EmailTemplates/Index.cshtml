@model List<Cedeva.Core.Entities.EmailTemplate>
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["EmailTemplate.Title"];
    var selectedType = ViewBag.SelectedType as EmailTemplateType?;
    var typeOptions = ViewBag.TypeOptions as List<SelectListItem>;
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1 class="h3">@Localizer["EmailTemplate.Title"]</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>@Localizer["EmailTemplate.CreateNew"]
        </a>
    </div>
</div>

<!-- Filter by Type -->
<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <select name="type" class="form-select" onchange="this.form.submit()">
                    <option value="">@Localizer["EmailTemplate.AllTypes"]</option>
                    @foreach (var option in typeOptions ?? new List<SelectListItem>())
                    {
                        <option value="@option.Value" selected="@(selectedType.HasValue && (int)selectedType.Value == int.Parse(option.Value))">
                            @option.Text
                        </option>
                    }
                </select>
                <span class="input-group-text">
                    <i class="fas fa-filter"></i>
                </span>
            </div>
        </form>
    </div>
</div>

<!-- Templates Table -->
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>@Localizer["EmailTemplate.NoTemplates"]
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Field.Name"]</th>
                            <th>@Localizer["EmailTemplate.TemplateType"]</th>
                            <th>@Localizer["Field.Subject"]</th>
                            <th>@Localizer["EmailTemplate.IsDefault"]</th>
                            <th>@Localizer["EmailTemplate.IsShared"]</th>
                            <th>@Localizer["Field.Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@template.Name</strong>
                                    @if (template.IsDefault)
                                    {
                                        <span class="badge bg-primary ms-2">@Localizer["EmailTemplate.Default"]</span>
                                    }
                                </td>
                                <td>@Localizer[$"EmailTemplateType.{template.TemplateType}"]</td>
                                <td>@template.Subject</td>
                                <td>
                                    @if (template.IsDefault)
                                    {
                                        <i class="fas fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <form asp-action="SetDefault" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@template.Id" />
                                            <input type="hidden" name="type" value="@((int)template.TemplateType)" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                @Localizer["EmailTemplate.SetAsDefault"]
                                            </button>
                                        </form>
                                    }
                                </td>
                                <td>
                                    @if (template.IsShared)
                                    {
                                        <i class="fas fa-check text-success"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@template.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Button.Edit"]">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Duplicate" asp-route-id="@template.Id" class="btn btn-sm btn-outline-secondary" title="@Localizer["EmailTemplate.Duplicate"]">
                                            <i class="fas fa-copy"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@template.Id" title="@Localizer["Button.Delete"]">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteModal-@template.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@Localizer["EmailTemplate.ConfirmDelete"]</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @Localizer["EmailTemplate.DeleteConfirmMessage", template.Name]
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Button.Cancel"]</button>
                                                    <form asp-action="Delete" method="post" style="display:inline;">
                                                        <input type="hidden" name="id" value="@template.Id" />
                                                        <button type="submit" class="btn btn-danger">@Localizer["Button.Delete"]</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a href="/ActivityManagement" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>@Localizer["Button.Back"]
    </a>
</div>
