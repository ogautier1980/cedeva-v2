@model Cedeva.Website.Features.Presence.ViewModels.PresenceListViewModel
@{
    ViewData["Title"] = Localizer["Presence.AttendanceList"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@Localizer["Presence.AttendanceList"]</h2>
            <p class="text-muted mb-0">
                <strong>@Model.Activity.Name</strong> -
                @Model.ActivityDay.DayDate.ToString("dddd dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))
            </p>
        </div>
        <div>
            <a href="@Url.Action("Print", new { activityId = Model.Activity.Id, dayId = Model.ActivityDay.DayId })"
               class="btn btn-outline-secondary" target="_blank">
                <i class="fas fa-print me-2"></i>@Localizer["Print"]
            </a>
            <a href="@Url.Action("SelectDay", new { id = Model.Activity.Id })" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
            </a>
        </div>
    </div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (!Model.PresenceItems.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                @Localizer["Presence.NoBookings"]
            </div>
        }
        else
        {
            <form asp-action="UpdatePresence" method="post" id="presenceForm">
                <input type="hidden" name="activityId" value="@Model.Activity.Id" />
                <input type="hidden" name="dayId" value="@Model.ActivityDay.DayId" />

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <span class="badge bg-primary">@Localizer["Presence.Total"] @Model.PresenceItems.Count</span>
                        <span class="badge bg-success ms-2" id="presentCount">
                            @Localizer["Presence.PresentCount"] @Model.PresenceItems.Count(p => p.IsPresent)
                        </span>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>@Localizer["Presence.SavePresences"]
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px">
                                    <input type="checkbox" id="checkAll" class="form-check-input" />
                                </th>
                                <th>@Localizer["Group"]</th>
                                <th>@Localizer["Child"]</th>
                                <th>@Localizer["BirthDate"]</th>
                                <th>@Localizer["Parent"]</th>
                                <th>@Localizer["Phone"]</th>
                                <th class="text-center">@Localizer["Reserved"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                string? currentGroup = null;
                            }
                            @for (int i = 0; i < Model.PresenceItems.Count; i++)
                            {
                                var item = Model.PresenceItems[i];
                                var isNewGroup = currentGroup != item.ActivityGroupName;
                                currentGroup = item.ActivityGroupName;

                                <tr class="@(isNewGroup && i > 0 ? "border-top border-2" : "")">
                                    <td class="text-center">
                                        <input type="checkbox"
                                               name="presence[@item.BookingDayId]"
                                               value="true"
                                               class="form-check-input presence-checkbox"
                                               @(item.IsPresent ? "checked" : "") />
                                        <input type="hidden" name="presence[@item.BookingDayId]" value="false" />
                                    </td>
                                    <td>
                                        @if (isNewGroup)
                                        {
                                            <span class="badge bg-primary">@(item.ActivityGroupName ?? Localizer["Presence.NoGroup"].Value)</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.ChildFirstName @item.ChildLastName</strong>
                                    </td>
                                    <td>
                                        @item.ChildBirthDate.ToString("dd/MM/yyyy")
                                        <span class="text-muted small">
                                            (@((DateTime.Today.Year - item.ChildBirthDate.Year)) @Localizer["Presence.YearsOld"])
                                        </span>
                                    </td>
                                    <td>@item.ParentName</td>
                                    <td>@item.ParentPhone</td>
                                    <td class="text-center">
                                        @if (item.IsReserved)
                                        {
                                            <i class="fas fa-check-circle text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle text-danger"></i>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>@Localizer["Presence.SavePresences"]
                    </button>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Check/uncheck all
        document.getElementById('checkAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.presence-checkbox');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updatePresentCount();
        });

        // Update present count when checkboxes change
        document.querySelectorAll('.presence-checkbox').forEach(cb => {
            cb.addEventListener('change', updatePresentCount);
        });

        function updatePresentCount() {
            const checkedCount = document.querySelectorAll('.presence-checkbox:checked').length;
            document.getElementById('presentCount').textContent = '@Localizer["Presence.PresentCount"] ' + checkedCount;
        }

        // Auto-save indicator
        const form = document.getElementById('presenceForm');
        let hasChanges = false;

        document.querySelectorAll('.presence-checkbox').forEach(cb => {
            cb.addEventListener('change', function() {
                hasChanges = true;
            });
        });

        window.addEventListener('beforeunload', function(e) {
            if (hasChanges) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        form.addEventListener('submit', function() {
            hasChanges = false;
        });
    </script>
}
</div>
