@model Cedeva.Website.Features.Presence.ViewModels.SelectDayViewModel
@{
    ViewData["Title"] = Localizer["Presence.SelectDay"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>@Model.Activity.Name</h2>
        <p class="text-muted mb-0">
            <i class="fas fa-calendar me-2"></i>
            @Model.Activity.StartDate.ToString("dd/MM/yyyy") - @Model.Activity.EndDate.ToString("dd/MM/yyyy")
        </p>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>@Localizer["Presence.BackToActivities"]
    </a>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted mb-4">
            <i class="fas fa-info-circle me-2"></i>
            @Localizer["Presence.SelectDayInfo"]
        </p>

        @if (!Model.ActivityDays.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                @Localizer["Presence.NoActiveDay"]
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var day in Model.ActivityDays)
                {
                    var dayName = day.DayDate.ToString("dddd", new System.Globalization.CultureInfo("fr-FR"));
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="card-body text-center">
                                <h6 class="text-uppercase text-muted small mb-2">@dayName</h6>
                                <h4 class="mb-3">@day.DayDate.ToString("dd/MM/yyyy")</h4>
                                <a href="@Url.Action("List", new { activityId = Model.Activity.Id, dayId = day.DayId })"
                                   class="btn btn-primary w-100 mb-2">
                                    <i class="fas fa-list me-2"></i>@Localizer["Presence.AttendanceList"]
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease;
    }
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
