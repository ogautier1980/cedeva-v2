@model IEnumerable<Cedeva.Website.Features.Children.ViewModels.ChildViewModel>
@{
    ViewData["Title"] = Localizer["Children"];
    var searchString = ViewData["SearchString"] as string;
    var parentId = ViewData["ParentId"] as int?;
    var pageNumber = (ViewData["PageNumber"] as int?) ?? 1;
    var pageSize = (ViewData["PageSize"] as int?) ?? 10;
    var totalPages = (ViewData["TotalPages"] as int?) ?? 1;
    var totalItems = (ViewData["TotalItems"] as int?) ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-child me-2"></i>@Localizer["Children"]</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Children.AddChild"]
            </a>
            <a asp-action="Export" asp-route-searchString="@searchString" asp-route-parentId="@parentId" class="btn btn-primary" title="@Localizer["ExportExcel"]">
                <i class="fas fa-file-excel"></i>
            </a>
            <a asp-action="ExportPdf" asp-route-searchString="@searchString" asp-route-parentId="@parentId" class="btn btn-primary" title="@Localizer["ExportPdf"]">
                <i class="fas fa-file-pdf"></i>
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_AlertMessages")
    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="@Localizer["Children.SearchPlaceholder"]" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>@Localizer["Search"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
                <input type="hidden" name="parentId" value="@parentId" />
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("LastName", Localizer["Name"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("BirthDate", Localizer["BirthDate"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Parent"]</th>
                                <th>@Localizer["Children.NationalRegisterNumber"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var child in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@child.LastName @child.FirstName</strong>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="fas fa-birthday-cake me-1 text-muted"></i>@child.BirthDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <a asp-controller="Parents" asp-action="Details" asp-route-id="@child.ParentId">
                                            @child.ParentFullName
                                        </a>
                                    </td>
                                    <td><small>@child.NationalRegisterNumber</small></td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@child.Id" class="btn btn-sm btn-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@child.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-sm btn-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@child.Id" class="btn btn-sm btn-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_Pagination")
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(searchString) || parentId.HasValue)
                    {
                        <span>@Localizer["Children.NoChildrenFound"]</span>
                    }
                    else
                    {
                        <span>@Localizer["Children.NoChildrenYet"]</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
