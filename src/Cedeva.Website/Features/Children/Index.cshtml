@model IEnumerable<Cedeva.Website.Features.Children.ViewModels.ChildViewModel>
@{
    ViewData["Title"] = "Enfants";
    var searchString = ViewData["SearchString"] as string;
    var parentId = ViewData["ParentId"] as int?;
    var pageNumber = (int)ViewData["PageNumber"];
    var pageSize = (int)ViewData["PageSize"];
    var totalPages = (int)ViewData["TotalPages"];
    var totalItems = (int)ViewData["TotalItems"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-child me-2"></i>Enfants</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Ajouter un enfant
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="Rechercher par nom, prénom ou numéro de registre national..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
                <input type="hidden" name="parentId" value="@parentId" />
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Prénom</th>
                                <th>Nom</th>
                                <th>Date de naissance</th>
                                <th>Parent</th>
                                <th>N° Registre National</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var child in Model)
                            {
                                <tr>
                                    <td>@child.FirstName</td>
                                    <td>@child.LastName</td>
                                    <td>@child.BirthDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-controller="Parents" asp-action="Details" asp-route-id="@child.ParentId">
                                            @child.ParentFullName
                                        </a>
                                    </td>
                                    <td>@child.NationalRegisterNumber</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@child.Id" class="btn btn-sm btn-info" title="Détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@child.Id" class="btn btn-sm btn-primary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@child.Id" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Affichage de @((pageNumber - 1) * pageSize + 1) à @Math.Min(pageNumber * pageSize, totalItems) sur @totalItems enfants
                        </div>
                        @if (totalPages > 1)
                        {
                            <ul class="pagination mb-0">
                                <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-parentId="@parentId" asp-route-pageNumber="@(pageNumber - 1)" asp-route-pageSize="@pageSize">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                                {
                                    <li class="page-item @(i == pageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-parentId="@parentId" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize">@i</a>
                                    </li>
                                }

                                <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-searchString="@searchString" asp-route-parentId="@parentId" asp-route-pageNumber="@(pageNumber + 1)" asp-route-pageSize="@pageSize">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </nav>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(searchString) || parentId.HasValue)
                    {
                        <span>Aucun enfant trouvé pour votre recherche.</span>
                    }
                    else
                    {
                        <span>Aucun enfant enregistré. Cliquez sur "Ajouter un enfant" pour commencer.</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
