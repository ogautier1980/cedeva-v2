@model Cedeva.Website.Features.Parents.ViewModels.ParentViewModel
@{
    ViewData["Title"] = "Détails du parent";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Détails du parent</h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit me-1"></i>Modifier
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash me-1"></i>Supprimer
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="mb-3 text-primary"><i class="fas fa-user me-2"></i>Informations personnelles</h6>

                    <dl class="row">
                        <dt class="col-sm-4">Prénom</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Nom</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Numéro de registre national</dt>
                        <dd class="col-sm-8">@Model.NationalRegisterNumber</dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-phone me-2"></i>Contact</h6>

                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </dd>

                        <dt class="col-sm-4">GSM</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.MobilePhoneNumber))
                            {
                                <a href="tel:@Model.MobilePhoneNumber">@Model.MobilePhoneNumber</a>
                            }
                            else
                            {
                                <span class="text-muted">Non renseigné</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Téléphone</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                            }
                            else
                            {
                                <span class="text-muted">Non renseigné</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-map-marker-alt me-2"></i>Adresse</h6>

                    <dl class="row">
                        <dt class="col-sm-4">Rue</dt>
                        <dd class="col-sm-8">@Model.Street</dd>

                        <dt class="col-sm-4">Code postal</dt>
                        <dd class="col-sm-8">@Model.PostalCode</dd>

                        <dt class="col-sm-4">Ville</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">Pays</dt>
                        <dd class="col-sm-8">@Model.Country</dd>
                    </dl>

                    <hr />

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-child me-2"></i>Enfants</h6>
                </div>
                <div class="card-body">
                    @if (Model.Children != null && Model.Children.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var child in Model.Children)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@child.FullName</span>
                                    <a asp-controller="Children" asp-action="Details" asp-route-id="@child.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Aucun enfant enregistré</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="Children" asp-action="Create" asp-route-parentId="@Model.Id" class="btn btn-sm btn-success w-100">
                            <i class="fas fa-plus me-1"></i>Ajouter un enfant
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
