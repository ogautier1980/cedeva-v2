@model Cedeva.Website.Features.Parents.ViewModels.ParentViewModel
@{
    ViewData["Title"] = "Supprimer le parent";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Supprimer le parent</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer ce parent ?
                        @if (Model.Children != null && Model.Children.Any())
                        {
                            <br />
                            <strong class="text-danger">Ce parent a @Model.Children.Count() enfant(s) associé(s).</strong>
                        }
                    </div>

                    <h6 class="mb-3 text-primary"><i class="fas fa-user me-2"></i>Informations du parent</h6>

                    <dl class="row">
                        <dt class="col-sm-4">Nom complet</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Téléphone</dt>
                        <dd class="col-sm-8">@Model.MobilePhoneNumber</dd>

                        <dt class="col-sm-4">Adresse</dt>
                        <dd class="col-sm-8">
                            @Model.Street<br />
                            @Model.PostalCode @Model.City
                        </dd>
                    </dl>

                    @if (Model.Children != null && Model.Children.Any())
                    {
                        <hr />
                        <h6 class="mb-3 text-danger"><i class="fas fa-child me-2"></i>Enfants associés</h6>
                        <ul class="list-group mb-3">
                            @foreach (var child in Model.Children)
                            {
                                <li class="list-group-item">@child.FullName</li>
                            }
                        </ul>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirmer la suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
