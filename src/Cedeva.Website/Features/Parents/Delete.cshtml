@model Cedeva.Website.Features.Parents.ViewModels.ParentViewModel
@{
    ViewData["Title"] = Localizer["Parents.DeleteParent"];
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Parents.DeleteParent"]<</h5>
                <</div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>@Localizer["Parents.DeleteWarning"]</strong> @Localizer["Parents.DeleteConfirmation"]
                        @if (Model.Children != null && Model.Children.Any())
                        {
                            <br />
                            <strong class="text-danger">@string.Format(Localizer["Parents.HasChildren"].Value, Model.Children.Count())</strong>
                        }
                    <</div>

                    <h6 class="mb-3 text-primary"><i class="fas fa-user me-2"></i>@Localizer["Parents.ParentInformation"]<</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["FullName"]<</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName<</dd>

                        <dt class="col-sm-4">@Localizer["Email"]<</dt>
                        <dd class="col-sm-8">@Model.Email<</dd>

                        <dt class="col-sm-4">@Localizer["Phone"]<</dt>
                        <dd class="col-sm-8">@Model.MobilePhoneNumber<</dd>

                        <dt class="col-sm-4">@Localizer["Address"]<</dt>
                        <dd class="col-sm-8">
                            @Model.Street<br />
                            @Model.PostalCode @Model.City
                        <</dd>
                    </dl>

                    @if (Model.Children != null && Model.Children.Any())
                    {
                        <hr />
                        <h6 class="mb-3 text-danger"><i class="fas fa-child me-2"></i>@Localizer["Parents.AssociatedChildren"]<</h6>
                        <ul class="list-group mb-3">
                            @foreach (var child in Model.Children)
                            {
                                <li class="list-group-item">@child.FullName</li>
                            }
                        </ul>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary text-nowrap">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-danger text-nowrap">
                                <i class="fas fa-trash me-2"></i>@Localizer["Parents.ConfirmDeletion"]
                            </button>
                        <</div>
                    </form>
                <</div>
            <</div>
        <</div>
    <</div>
<</div>
