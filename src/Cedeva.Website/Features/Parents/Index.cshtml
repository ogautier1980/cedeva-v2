@model Cedeva.Website.Features.Parents.ViewModels.ParentListViewModel
@{
    ViewData["Title"] = Localizer["Parents"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">@Localizer["Parents"]<</h1>
        <div class="d-flex gap-2">
            <a asp-action="Export" asp-route-searchTerm="@Model.SearchTerm" class="btn btn-success text-nowrap">
                <i class="fas fa-file-excel me-2"></i>@Localizer["ExportExcel"]
            </a>
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Parents.NewParent"]
            </a>
        <</div>
    <</div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <</div>
    }

    <!-- Search -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">@Localizer["Search"]<</label>
                    <input type="text" name="searchTerm" class="form-control" value="@Model.SearchTerm" placeholder="@Localizer["Parents.SearchPlaceholderShort"]">
                <</div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fas fa-search me-2"></i>@Localizer["Search"]
                    </button>
                <</div>
                <div class="col-md-2 d-flex align-items-end">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-2"></i>@Localizer["Reset"]
                    </a>
                <</div>
            </form>
        <</div>
    <</div>

    <!-- Parents Table -->
    <div class="card shadow">
        <div class="card-body">
            @if (Model.Parents.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Name"]<</th>
                                <th>@Localizer["Contact"]<</th>
                                <th>@Localizer["Address"]<</th>
                                <th class="text-center">@Localizer["Children"]<</th>
                                <th class="text-end">@Localizer["Actions"]<</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var parent in Model.Parents)
                            {
                                <tr>
                                    <td>
                                        <strong>@parent.LastName @parent.FirstName</strong>
                                    <</td>
                                    <td>
                                        <small>
                                            <i class="fas fa-envelope me-1 text-muted"></i>@parent.Email<br>
                                            <i class="fas fa-mobile-alt me-1 text-muted"></i>@parent.MobilePhoneNumber
                                        </small>
                                    <</td>
                                    <td>
                                        <small>@parent.Street<br>@parent.PostalCode @parent.City</small>
                                    <</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@parent.ChildrenCount</span>
                                    <</td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@parent.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@parent.Id" class="btn btn-sm btn-outline-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@parent.Id" class="btn btn-sm btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        <</div>
                                    <</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                <</div>

                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm">@Localizer["Previous"]</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm">@Localizer["Next"]</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-friends fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["Parents.NoParentsFound"]</p>
                    <a asp-action="Create" class="btn btn-primary">@Localizer["Parents.AddParent"]</a>
                <</div>
            }
        <</div>
    <</div>
<</div>
