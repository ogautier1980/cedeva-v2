@model Cedeva.Website.Features.Bookings.ViewModels.BookingViewModel
@using Cedeva.Core.Enums
@{
    ViewData["Title"] = Localizer["Bookings.Details"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>@Localizer["Bookings.BookingDetails"]</h5>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@Url.Action("Details", new { id = Model.Id })" class="btn btn-sm btn-primary text-nowrap">
                            <i class="fas fa-edit me-1"></i>@Localizer["Edit"]
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger text-nowrap">
                            <i class="fas fa-trash me-1"></i>@Localizer["Delete"]
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>@Localizer["Activities.GeneralInformation"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Bookings.BookingDate"]</dt>
                        <dd class="col-sm-8">@Model.BookingDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Localizer["Child"]</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="Children" asp-action="Details" asp-route-id="@Model.ChildId">
                                <i class="fas fa-child me-1"></i>@Model.ChildFullName
                            </a>
                        </dd>

                        <dt class="col-sm-4">@Localizer["Parent"]</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-user me-1"></i>@Model.ParentFullName
                        </dd>

                        <dt class="col-sm-4">@Localizer["Activity"]</dt>
                        <dd class="col-sm-8">
                            <a asp-controller="Activities" asp-action="Details" asp-route-id="@Model.ActivityId">
                                <strong>@Model.ActivityName</strong>
                            </a><br />
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                @Model.ActivityStartDate?.ToString("dd/MM/yyyy") - @Model.ActivityEndDate?.ToString("dd/MM/yyyy")
                            </small>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.GroupLabel))
                        {
                            <dt class="col-sm-4">@Localizer["Group"]</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary">@Model.GroupLabel</span>
                            </dd>
                        }
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-check-circle me-2"></i>@Localizer["Status"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Confirmation"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsConfirmed ? "bg-success" : "bg-warning")">
                                @(Model.IsConfirmed ? Localizer["Confirmed"] : Localizer["Pending"])
                            </span>
                        </dd>

                        <dt class="col-sm-4">@Localizer["Bookings.MedicalSheetReceived"]</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsMedicalSheet)
                            {
                                <span class="badge bg-success text-white">
                                    <i class="fas fa-check me-1"></i>@Localizer["Received"]
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-white">
                                    <i class="fas fa-times me-1"></i>@Localizer["NotReceived"]
                                </span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-euro-sign me-2"></i>@Localizer["Financial.Information"]</h6>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Financial.TotalAmount"]</dt>
                        <dd class="col-sm-8">
                            <strong class="text-primary">@Model.TotalAmount.ToString("C2", new System.Globalization.CultureInfo("fr-BE"))</strong>
                        </dd>

                        <dt class="col-sm-4">@Localizer["Financial.PaidAmount"]</dt>
                        <dd class="col-sm-8">
                            <span class="text-success">@Model.PaidAmount.ToString("C2", new System.Globalization.CultureInfo("fr-BE"))</span>
                        </dd>

                        <dt class="col-sm-4">@Localizer["Financial.Balance"]</dt>
                        <dd class="col-sm-8">
                            @{
                                var balance = Model.TotalAmount - Model.PaidAmount;
                                var balanceClass = balance > 0 ? "text-danger" : "text-success";
                            }
                            <strong class="@balanceClass">@balance.ToString("C2", new System.Globalization.CultureInfo("fr-BE"))</strong>
                        </dd>

                        <dt class="col-sm-4">@Localizer["Financial.PaymentStatus"]</dt>
                        <dd class="col-sm-8">
                            @{
                                var statusBadge = Model.PaymentStatus switch
                                {
                                    PaymentStatus.Paid => "bg-success",
                                    PaymentStatus.PartiallyPaid => "bg-warning",
                                    PaymentStatus.NotPaid => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                var statusText = Model.PaymentStatus switch
                                {
                                    PaymentStatus.Paid => Localizer["PaymentStatus.Paid"],
                                    PaymentStatus.PartiallyPaid => Localizer["PaymentStatus.PartiallyPaid"],
                                    PaymentStatus.NotPaid => Localizer["PaymentStatus.NotPaid"],
                                    _ => ""
                                };
                            }
                            <span class="badge @statusBadge">@statusText</span>
                        </dd>
                    </dl>

                    <hr />

                    <h6 class="mb-3 text-primary"><i class="fas fa-calendar-week me-2"></i>@Localizer["Bookings.ReservedDays"]</h6>

                    @if (Model.WeeklyDays.Any())
                    {
                        <div class="row g-3">
                            @foreach (var week in Model.WeeklyDays)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-primary h-100">
                                        <div class="card-header bg-primary text-white">
                                            <i class="fas fa-calendar-week me-2"></i>@week.WeekLabel
                                            <small class="ms-2">(@week.StartDate.ToString("dd/MM") - @week.EndDate.ToString("dd/MM/yyyy"))</small>
                                        </div>
                                        <div class="card-body p-0">
                                            <div class="list-group list-group-flush">
                                                @foreach (var day in week.Days)
                                                {
                                                    var dayName = day.DayOfWeek switch
                                                    {
                                                        DayOfWeek.Monday => Localizer["DayOfWeek.Monday"],
                                                        DayOfWeek.Tuesday => Localizer["DayOfWeek.Tuesday"],
                                                        DayOfWeek.Wednesday => Localizer["DayOfWeek.Wednesday"],
                                                        DayOfWeek.Thursday => Localizer["DayOfWeek.Thursday"],
                                                        DayOfWeek.Friday => Localizer["DayOfWeek.Friday"],
                                                        DayOfWeek.Saturday => Localizer["DayOfWeek.Saturday"],
                                                        DayOfWeek.Sunday => Localizer["DayOfWeek.Sunday"],
                                                        _ => ""
                                                    };
                                                    var isWeekend = day.DayOfWeek == DayOfWeek.Saturday || day.DayOfWeek == DayOfWeek.Sunday;
                                                    var bgClass = isWeekend ? "bg-light" : "";

                                                    <div class="list-group-item @bgClass py-2">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <strong>@dayName</strong>
                                                                <small class="text-muted ms-1">@day.Date.ToString("dd/MM")</small>
                                                                @if (isWeekend)
                                                                {
                                                                    <span class="badge bg-warning text-dark ms-1" style="font-size: 0.65rem;">Week-end</span>
                                                                }
                                                            </div>
                                                            <div>
                                                                @if (day.IsPresent)
                                                                {
                                                                    <span class="badge bg-success">
                                                                        <i class="fas fa-check me-1"></i>@Localizer["Present"]
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-secondary">
                                                                        <i class="fas fa-minus me-1"></i>@Localizer["NotMarked"]
                                                                    </span>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>@Localizer["Bookings.NoDaysReserved"]
                        </div>
                    }

                    <hr />

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary text-nowrap">
                            <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToList"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>@Localizer["Statistics"]</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-calendar-day me-2 text-primary"></i>@Localizer["BookedDays"]</span>
                            <span class="badge bg-primary rounded-pill">@Model.DaysCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-question-circle me-2 text-primary"></i>@Localizer["QuestionAnswers"]</span>
                            <span class="badge bg-primary rounded-pill">@Model.QuestionAnswersCount</span>
                        </li>
                    </ul>
                </div>
            </div>

            @if (!Model.IsConfirmed)
            {
                <div class="card shadow mt-3">
                    <div class="card-header bg-warning">
                        <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Bookings.ActionRequired"]</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">@Localizer["Bookings.NotYetConfirmed"]</p>
                        <form asp-action="Edit" method="post">
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <input type="hidden" name="BookingDate" value="@Model.BookingDate.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="ChildId" value="@Model.ChildId" />
                            <input type="hidden" name="ActivityId" value="@Model.ActivityId" />
                            <input type="hidden" name="GroupId" value="@Model.GroupId" />
                            <input type="hidden" name="IsConfirmed" value="true" />
                            <input type="hidden" name="IsMedicalSheet" value="@Model.IsMedicalSheet" />
                            <button type="submit" class="btn btn-success w-100 text-nowrap">
                                <i class="fas fa-check me-2"></i>@Localizer["Bookings.ConfirmBooking"]
                            </button>
                        </form>
                    </div>
                </div>
            }

            @if (!Model.IsMedicalSheet)
            {
                <div class="card shadow mt-3">
                    <div class="card-header bg-danger">
                        <h6 class="mb-0" style="color: white !important;"><i class="fas fa-file-medical me-2"></i>@Localizer["Bookings.MedicalSheetReceived"]</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">@Localizer["Bookings.MedicalSheetNotReceived"]</p>
                        <div class="form-text mb-2">@Localizer["Bookings.ContactParentForMedicalSheet"]</div>
                    </div>
                </div>
            }
        </div>
    </div>

    @* Audit Information *@
    <div class="mt-4 pt-3 border-top">
        <small class="text-muted" style="font-weight: 300;">
            @Localizer["Audit.CreatedBy"] <strong>@Model.CreatedByDisplayName</strong>
            @Localizer["Audit.On"] @Model.CreatedAt.ToString("dd/MM/yyyy")
            @Localizer["Audit.At"] @Model.CreatedAt.ToString("HH:mm")

            @if (Model.ModifiedAt.HasValue)
            {
                <br />
                @Localizer["Audit.ModifiedBy"] <strong>@(Model.ModifiedByDisplayName ?? "System")</strong>
                @Localizer["Audit.On"] @Model.ModifiedAt.Value.ToString("dd/MM/yyyy")
                @Localizer["Audit.At"] @Model.ModifiedAt.Value.ToString("HH:mm")
            }
        </small>
    </div>
</div>
