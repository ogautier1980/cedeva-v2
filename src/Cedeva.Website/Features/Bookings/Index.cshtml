@model IEnumerable<Cedeva.Website.Features.Bookings.ViewModels.BookingViewModel>
@{
    ViewData["Title"] = Localizer["Bookings"];
    var searchString = ViewData["SearchString"] as string;
    var activityId = ViewData["ActivityId"] as int?;
    var childId = ViewData["ChildId"] as int?;
    var isConfirmed = ViewData["IsConfirmed"] as bool?;
    var pageNumber = (ViewData["PageNumber"] as int?) ?? 1;
    var pageSize = (ViewData["PageSize"] as int?) ?? 10;
    var totalPages = (ViewData["TotalPages"] as int?) ?? 1;
    var totalItems = (ViewData["TotalItems"] as int?) ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-list me-2"></i>@Localizer["Bookings"]</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Bookings.NewBooking"]
            </a>
            <a asp-action="Export" asp-route-searchString="@searchString" asp-route-activityId="@activityId" asp-route-childId="@childId" asp-route-isConfirmed="@isConfirmed" class="btn btn-primary" title="@Localizer["Activities.ExportExcel"]">
                <i class="fas fa-file-excel"></i>
            </a>
            <a asp-action="ExportPdf" asp-route-searchString="@searchString" asp-route-activityId="@activityId" asp-route-childId="@childId" asp-route-isConfirmed="@isConfirmed" class="btn btn-primary" title="@Localizer["ExportPdf"]">
                <i class="fas fa-file-pdf"></i>
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_AlertMessages")
    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="@Localizer["Bookings.SearchPlaceholder"]" />
                    </div>
                </div>
                <div class="col-md-2">
                    <select name="isConfirmed" class="form-select">
                        <option value="">@Localizer["Bookings.AllStatuses"]</option>
                        <option value="true" selected="@(isConfirmed == true)">@Localizer["Bookings.ConfirmedOnly"]</option>
                        <option value="false" selected="@(isConfirmed == false)">@Localizer["Bookings.PendingOnly"]</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>@Localizer["Search"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
                <input type="hidden" name="activityId" value="@activityId" />
                <input type="hidden" name="childId" value="@childId" />
                <input type="hidden" name="sortBy" value="@(ViewData["SortBy"] as string)" />
                <input type="hidden" name="sortOrder" value="@(ViewData["SortOrder"] as string)" />
                <input type="hidden" name="pageSize" value="@pageSize" />
            </form>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("BookingDate", Localizer["Date"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("ChildName", Localizer["Child"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Parent"]</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("ActivityName", Localizer["Activity"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Group"]</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("IsConfirmed", Localizer["Status"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@Localizer["Bookings.MedicalSheet"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>@booking.BookingDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-controller="Children" asp-action="Details" asp-route-id="@booking.ChildId">
                                            @booking.ChildFullName
                                        </a>
                                    </td>
                                    <td>@booking.ParentFullName</td>
                                    <td>
                                        <strong>@booking.ActivityName</strong><br />
                                        <small class="text-muted">
                                            @booking.ActivityStartDate?.ToString("dd/MM/yyyy") - @booking.ActivityEndDate?.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(booking.GroupLabel))
                                        {
                                            <span class="badge bg-secondary">@booking.GroupLabel</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(booking.IsConfirmed ? "bg-success" : "bg-warning")">
                                            @(booking.IsConfirmed ? Localizer["Bookings.Confirmed"] : Localizer["Bookings.Pending"])
                                        </span>
                                    </td>
                                    <td>
                                        @if (booking.IsMedicalSheet)
                                        {
                                            <i class="fas fa-check-circle text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle text-danger"></i>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@booking.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-sm btn-outline-secondary" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_Pagination")
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(searchString) || activityId.HasValue || childId.HasValue || isConfirmed.HasValue)
                    {
                        <span>@Localizer["Bookings.NoBookingsFound"]</span>
                    }
                    else
                    {
                        <span>@Localizer["Bookings.NoBookingsYet"]</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
