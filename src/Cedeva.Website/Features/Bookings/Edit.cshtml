@model Cedeva.Website.Features.Bookings.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Modifier l'inscription";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>@Localizer["Bookings.EditBooking"]/h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h6 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>Informations de base</h6>

                        <div class="mb-3">
                            <label asp-for="BookingDate" class="form-label"></label>
                            <input asp-for="BookingDate" type="date" class="form-control" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ChildId" class="form-label"></label>
                                <select asp-for="ChildId" class="form-select" asp-items="ViewBag.Children">
                                    <option value="">-- Sélectionnez un enfant --</option>
                                </select>
                                <span asp-validation-for="ChildId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActivityId" class="form-label"></label>
                                <select asp-for="ActivityId" class="form-select" asp-items="ViewBag.Activities">
                                    <option value="">-- Sélectionnez une activité --</option>
                                </select>
                                <span asp-validation-for="ActivityId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GroupId" class="form-label"></label>
                            <select asp-for="GroupId" class="form-select" asp-items="ViewBag.Groups">
                                <option value="">-- Aucun groupe (optionnel) --</option>
                            </select>
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                            <div class="form-text">Groupe d'activité (si applicable)</div>
                        </div>

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-check-circle me-2"></i>Statut</h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsConfirmed" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsConfirmed" class="form-check-label"></label>
                                </div>
                                <div class="form-text">Cocher si l'inscription est confirmée</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsMedicalSheet" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsMedicalSheet" class="form-check-label"></label>
                                </div>
                                <div class="form-text">Cocher si la fiche médicale a été reçue</div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
