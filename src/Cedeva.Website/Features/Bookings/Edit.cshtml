@model Cedeva.Website.Features.Bookings.ViewModels.BookingViewModel
@{
    ViewData["Title"] = Localizer["Bookings.EditBooking"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>@Localizer["Bookings.EditBooking"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h6 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>@Localizer["Bookings.BasicInformation"]</h6>

                        <div class="mb-3">
                            <label for="BookingDate" class="form-label">@Localizer["Field.BookingDate"]</label>
                            <input asp-for="BookingDate" type="date" class="form-control" id="BookingDate" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="ChildId" class="form-label">@Localizer["Field.Child"]</label>
                                <select asp-for="ChildId" class="form-select" asp-items="ViewBag.Children" id="ChildId">
                                    <option value="">@Localizer["SelectChild"]</option>
                                </select>
                                <span asp-validation-for="ChildId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="ActivityId" class="form-label">@Localizer["Field.Activity"]</label>
                                <select asp-for="ActivityId" class="form-select" asp-items="ViewBag.Activities" id="ActivityId">
                                    <option value="">@Localizer["SelectActivity"]</option>
                                </select>
                                <span asp-validation-for="ActivityId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="GroupId" class="form-label">@Localizer["Field.Group"]</label>
                            <select asp-for="GroupId" class="form-select" asp-items="ViewBag.Groups" id="GroupId">
                                <option value="">@Localizer["NoGroupOptional"]</option>
                            </select>
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                            <div class="form-text">@Localizer["Bookings.ActivityGroupHelp"]</div>
                        </div>

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-check-circle me-2"></i>@Localizer["Status"]</h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsConfirmed" class="form-check-input" type="checkbox" id="IsConfirmed" />
                                    <label for="IsConfirmed" class="form-check-label">@Localizer["Field.IsConfirmed"]</label>
                                </div>
                                <div class="form-text">@Localizer["Bookings.ConfirmedHelp"]</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsMedicalSheet" class="form-check-input" type="checkbox" id="IsMedicalSheet" />
                                    <label for="IsMedicalSheet" class="form-check-label">@Localizer["Field.IsMedicalSheet"]</label>
                                </div>
                                <div class="form-text">@Localizer["Bookings.MedicalSheetHelp"]</div>
                            </div>
                        </div>

                        <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-calendar-week me-2"></i>@Localizer["Bookings.ReservedDays"]</h6>

                        @if (Model.WeeklyDays.Any())
                        {
                            <div class="row g-3 mb-3">
                                @foreach (var week in Model.WeeklyDays)
                                {
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100">
                                            <div class="card-header bg-light">
                                                <i class="fas fa-calendar me-2"></i>@week.WeekLabel
                                                <small class="text-muted ms-2">(@week.StartDate.ToString("dd/MM") - @week.EndDate.ToString("dd/MM/yyyy"))</small>
                                            </div>
                                            <div class="card-body p-0">
                                                <div class="list-group list-group-flush">
                                                    @foreach (var day in week.Days)
                                                    {
                                                        var dayName = day.DayOfWeek switch
                                                        {
                                                            DayOfWeek.Monday => Localizer["DayOfWeek.Monday"],
                                                            DayOfWeek.Tuesday => Localizer["DayOfWeek.Tuesday"],
                                                            DayOfWeek.Wednesday => Localizer["DayOfWeek.Wednesday"],
                                                            DayOfWeek.Thursday => Localizer["DayOfWeek.Thursday"],
                                                            DayOfWeek.Friday => Localizer["DayOfWeek.Friday"],
                                                            DayOfWeek.Saturday => Localizer["DayOfWeek.Saturday"],
                                                            DayOfWeek.Sunday => Localizer["DayOfWeek.Sunday"],
                                                            _ => ""
                                                        };
                                                        var isWeekend = day.DayOfWeek == DayOfWeek.Saturday || day.DayOfWeek == DayOfWeek.Sunday;
                                                        var bgClass = isWeekend ? "bg-light" : "";

                                                        <div class="list-group-item @bgClass py-2">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                       name="SelectedActivityDayIds" value="@day.ActivityDayId"
                                                                       id="day_@day.ActivityDayId" @(day.IsReserved ? "checked" : "") />
                                                                <label class="form-check-label" for="day_@day.ActivityDayId">
                                                                    <strong>@dayName</strong>
                                                                    <small class="text-muted ms-1">@day.Date.ToString("dd/MM")</small>
                                                                    @if (isWeekend)
                                                                    {
                                                                        <span class="badge bg-warning text-dark ms-1" style="font-size: 0.65rem;">Week-end</span>
                                                                    }
                                                                </label>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>@Localizer["Bookings.SelectActivityFirst"]
                            </div>
                        }

                        @if (Model.Questions.Any())
                        {
                            <h6 class="mb-3 mt-4 text-primary"><i class="fas fa-question-circle me-2"></i>@Localizer["Bookings.QuestionsSection"]</h6>

                            @foreach (var question in Model.Questions)
                            {
                                <div class="mb-3">
                                    <label class="form-label">
                                        @question.QuestionText
                                        @if (question.IsRequired)
                                        {
                                            <span class="badge bg-danger ms-1" style="font-size: 0.65rem;">@Localizer["Required"]</span>
                                        }
                                    </label>

                                    @switch (question.QuestionType)
                                    {
                                        case Cedeva.Core.Enums.QuestionType.Text:
                                            <input type="text" class="form-control" name="QuestionAnswers[@question.Id]" value="@question.AnswerText" @(question.IsRequired ? "required" : "") />
                                            break;

                                        case Cedeva.Core.Enums.QuestionType.Checkbox:
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" name="QuestionAnswers[@question.Id]" value="true" id="question_@question.Id" @(question.AnswerText == "true" ? "checked" : "") />
                                                <label class="form-check-label" for="question_@question.Id">@Localizer["ActivityQuestions.Yes"]</label>
                                            </div>
                                            break;

                                        case Cedeva.Core.Enums.QuestionType.Radio:
                                            @if (!string.IsNullOrWhiteSpace(question.Options))
                                            {
                                                var options = question.Options.Split(',');
                                                for (int i = 0; i < options.Length; i++)
                                                {
                                                    var option = options[i].Trim();
                                                    var radioId = $"question_{question.Id}_{i}";
                                                    var isChecked = question.AnswerText == option;
                                                    <div class="form-check">
                                                        <input type="radio" class="form-check-input" name="QuestionAnswers[@question.Id]" value="@option" id="@radioId" checked="@isChecked" required="@question.IsRequired" />
                                                        <label class="form-check-label" for="@radioId">@option</label>
                                                    </div>
                                                }
                                            }
                                            break;

                                        case Cedeva.Core.Enums.QuestionType.Dropdown:
                                            <select class="form-select question-dropdown" name="QuestionAnswers[@question.Id]" required="@question.IsRequired">
                                                <option value="">@Localizer["Select"]</option>
                                                @if (!string.IsNullOrWhiteSpace(question.Options))
                                                {
                                                    var options = question.Options.Split(',');
                                                    foreach (var option in options)
                                                    {
                                                        var trimmedOption = option.Trim();
                                                        var isSelected = question.AnswerText == trimmedOption;
                                                        <option value="@trimmedOption" selected="@isSelected">@trimmedOption</option>
                                                    }
                                                }
                                            </select>
                                            break;
                                    }
                                </div>
                            }
                        }

                        <hr />

                        <div class="d-flex justify-content-between">
                            @{
                                var returnUrl = ViewData["ReturnUrl"]?.ToString();
                                var cancelUrl = !string.IsNullOrEmpty(returnUrl) ? returnUrl : Url.Action("Index");
                            }
                            <a href="@cancelUrl" class="btn btn-outline-secondary text-nowrap">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-primary text-nowrap">
                                <i class="fas fa-save me-2"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var $activitySelect = $('#ActivityId');
            var $groupSelect = $('#GroupId');
            var initialGroupId = $groupSelect.val();

            // Initialize Choices.js on static selects
            var childChoices = CedevaChoices.initWithSearch('#ChildId');
            var activityChoices = CedevaChoices.init('#ActivityId');
            var groupChoices = CedevaChoices.init('#GroupId');

            // Initialize Choices.js on question dropdowns
            CedevaChoices.initAll('.question-dropdown');

            $activitySelect.on('change', function () {
                var activityId = $(this).val();

                // Destroy existing Choices instance for groups
                if (groupChoices) {
                    CedevaChoices.destroy(groupChoices);
                    groupChoices = null;
                }

                // Clear and disable group select
                $groupSelect.empty();
                $groupSelect.append('<option value="">@Localizer["NoGroupOptional"]</option>');

                if (activityId) {
                    // Fetch groups for selected activity
                    $.get('@Url.Action("GetGroupsByActivity", "Bookings")', { activityId: activityId }, function (groups) {
                        $.each(groups, function (index, group) {
                            var option = $('<option></option>').val(group.id).text(group.label);
                            // Restore previously selected group if it exists in new list
                            if (group.id == initialGroupId) {
                                option.attr('selected', 'selected');
                            }
                            $groupSelect.append(option);
                        });

                        // Re-initialize Choices.js on group select
                        groupChoices = CedevaChoices.init('#GroupId');
                    });
                }
            });
        });
    </script>
}
