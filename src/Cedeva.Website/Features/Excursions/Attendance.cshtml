@model Cedeva.Website.Features.ActivityManagement.ViewModels.ExcursionAttendanceViewModel

@{
    ViewData["Title"] = Localizer["Excursion.Attendance"] + " - " + Model.Excursion.Name;
    ViewData["ActivityId"] = Model.Activity.Id;
    ViewData["ActivityName"] = Model.Activity.Name;
    ViewData["NavSection"] = "Excursions";
    ViewData["NavAction"] = "Attendance";
}


<div class="container-fluid py-4">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Excursion Info -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-clipboard-check"></i> @Localizer["Excursion.Attendance"] - @Model.Excursion.Name
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <p class="mb-1"><strong>@Localizer["Field.ExcursionDate"]:</strong> @Model.Excursion.ExcursionDate.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1"><strong>@Localizer["Field.ExcursionType"]:</strong> @Localizer[$"Enum.ExcursionType.{Model.Excursion.Type}"]</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1"><strong>@Localizer["Excursion.TotalRegistrations"]:</strong> @Model.ChildrenByGroup.Sum(g => g.Value.Count)</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1"><strong>@Localizer["Excursion.PresentCount"]:</strong> @Model.ChildrenByGroup.Sum(g => g.Value.Count(c => c.IsPresent))</p>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.ChildrenByGroup.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> @Localizer["Excursion.NoRegistrations"]
        </div>
    }
    else
    {
        <!-- Instructions -->
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle"></i> @Localizer["Excursion.AttendanceHelp"]
        </div>

        <!-- Affichage par groupe -->
        @foreach (var groupEntry in Model.ChildrenByGroup.OrderBy(g => g.Key.Label))
        {
            var group = groupEntry.Key;
            var children = groupEntry.Value;
            var presentCount = children.Count(c => c.IsPresent);

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users"></i> @group.Label
                        <span class="badge bg-light text-dark ms-2">@presentCount / @children.Count @Localizer["Present"]</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["LastName"]</th>
                                    <th>@Localizer["FirstName"]</th>
                                    <th>@Localizer["BirthDate"]</th>
                                    <th class="text-center">@Localizer["Present"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var child in children)
                                {
                                    <tr class="@(child.IsPresent ? "table-success" : "")">
                                        <td>@child.LastName</td>
                                        <td>@child.FirstName</td>
                                        <td>@child.BirthDate.ToString("dd/MM/yyyy")</td>
                                        <td class="text-center">
                                            <div class="form-check d-inline-block">
                                                <input type="checkbox"
                                                       class="form-check-input attendance-checkbox"
                                                       data-registration-id="@child.RegistrationId"
                                                       @(child.IsPresent ? "checked" : "")
                                                       style="cursor: pointer;" />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Summary -->
        <div class="card">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h6 class="text-muted">@Localizer["Excursion.TotalRegistrations"]</h6>
                        <h3 class="text-primary">@Model.ChildrenByGroup.Sum(g => g.Value.Count)</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">@Localizer["Excursion.PresentCount"]</h6>
                        <h3 class="text-success">@Model.ChildrenByGroup.Sum(g => g.Value.Count(c => c.IsPresent))</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">@Localizer["Excursion.AbsentCount"]</h6>
                        <h3 class="text-danger">@Model.ChildrenByGroup.Sum(g => g.Value.Count(c => !c.IsPresent))</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Print Button -->
        <div class="mt-3">
            <a asp-action="Index" asp-route-id="@Model.Activity.Id" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> @Localizer["BackToList"]
            </a>
            <button onclick="window.print()" class="btn btn-outline-secondary">
                <i class="fas fa-print"></i> @Localizer["Print"]
            </button>
        </div>
    }
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        $(document).ready(function () {
            $('.attendance-checkbox').on('change', function () {
                var checkbox = $(this);
                var registrationId = checkbox.data('registration-id');
                var isPresent = checkbox.is(':checked');
                var row = checkbox.closest('tr');

                // Récupérer le token anti-forgery
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("UpdateAttendance", "Excursions")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: {
                        registrationId: registrationId,
                        isPresent: isPresent
                    },
                    success: function (response) {
                        if (response.success) {
                            // Ajouter/retirer la classe table-success
                            if (isPresent) {
                                row.addClass('table-success');
                            } else {
                                row.removeClass('table-success');
                            }
                        } else {
                            alert('@Localizer["Error"]: ' + response.message);
                            // Rétablir l'état précédent
                            checkbox.prop('checked', !isPresent);
                        }
                    },
                    error: function () {
                        alert('@Localizer["Error.UpdateFailed"]');
                        // Rétablir l'état précédent
                        checkbox.prop('checked', !isPresent);
                    }
                });
            });
        });
    </script>
}
