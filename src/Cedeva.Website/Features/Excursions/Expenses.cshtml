@model Cedeva.Website.Features.ActivityManagement.ViewModels.ExcursionExpensesViewModel

@{
    ViewData["Title"] = Localizer["Excursion.Expenses"] + " - " + Model.Excursion?.Name;
    ViewData["ActivityId"] = Model.Activity?.Id;
    ViewData["ActivityName"] = Model.Activity?.Name;
    ViewData["NavSection"] = "Excursions";
    ViewData["NavAction"] = "Expenses";
}


<div class="container-fluid py-4">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Excursion Info -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-receipt"></i> @Localizer["Excursion.Expenses"] - @Model.Excursion?.Name
            </h5>
        </div>
        <div class="card-body">
            <p class="mb-1"><strong>@Localizer["Field.ExcursionDate"]:</strong> @Model.Excursion?.ExcursionDate.ToString("dd/MM/yyyy")</p>
            @if (Model.Excursion?.StartTime.HasValue == true || Model.Excursion?.EndTime.HasValue == true)
            {
                <p class="mb-1">
                    <strong>@Localizer["Excursion.TimeSlot"]:</strong>
                    @if (Model.Excursion.StartTime.HasValue)
                    {
                        @Model.Excursion.StartTime.Value.ToString(@"hh\:mm")
                    }
                    @if (Model.Excursion.EndTime.HasValue)
                    {
                        <text> - @Model.Excursion.EndTime.Value.ToString(@"hh\:mm")</text>
                    }
                </p>
            }
            <p class="mb-0"><strong>@Localizer["Excursion.TotalRegistrations"]:</strong> @Model.Excursion?.Registrations.Count</p>
        </div>
    </div>

    <div class="row">
        <!-- Financial Summary -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-line"></i> @Localizer["Excursion.FinancialSummary"]</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">@Localizer["Excursion.TotalRevenue"]:</span>
                            <strong class="text-success">@Model.TotalRevenue.ToString("C2")</strong>
                        </div>
                        <small class="text-muted">@Model.Excursion?.Registrations.Count × @Model.Excursion?.Cost.ToString("C2")</small>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">@Localizer["Excursion.TotalExpenses"]:</span>
                            <strong class="text-danger">@Model.TotalExpenses.ToString("C2")</strong>
                        </div>
                        <small class="text-muted">@Model.Expenses.Count @Localizer["Excursion.ExpenseItems"]</small>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">@Localizer["Excursion.NetBalance"]:</span>
                        <strong class="@(Model.NetBalance >= 0 ? "text-success" : "text-danger")">
                            @Model.NetBalance.ToString("C2")
                        </strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Expense Form -->
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-plus-circle"></i> @Localizer["Excursion.AddExpense"]</h6>
                </div>
                <div class="card-body">
                    <form asp-action="AddExpense" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" name="Excursion.Id" value="@Model.Excursion?.Id" />
                        <input type="hidden" name="Excursion.ActivityId" value="@Model.Activity?.Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Label" class="form-label"></label>
                                <input asp-for="Label" class="form-control" placeholder="@Localizer["Expense.LabelPlaceholder"]" />
                                <span asp-validation-for="Label" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Amount" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input asp-for="Amount" type="text" class="form-control" placeholder="0.00"
                                           data-val-number="@Localizer["Validation.Number"]" />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="ExpenseDate" class="form-label"></label>
                                <input asp-for="ExpenseDate" type="date" class="form-control" />
                                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">-- @Localizer["Select"] --</option>
                                    <option value="Transport">@Localizer["Expense.Category.Transport"]</option>
                                    <option value="Billets">@Localizer["Expense.Category.Tickets"]</option>
                                    <option value="Repas">@Localizer["Expense.Category.Meals"]</option>
                                    <option value="Matériel">@Localizer["Expense.Category.Equipment"]</option>
                                    <option value="Autre">@Localizer["Expense.Category.Other"]</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="OrganizationPaymentSource" class="form-label"></label>
                                <select asp-for="OrganizationPaymentSource" class="form-select">
                                    <option value="OrganizationCard">@Localizer["Payment.OrganizationCard"]</option>
                                    <option value="OrganizationCash">@Localizer["Payment.OrganizationCash"]</option>
                                </select>
                                <span asp-validation-for="OrganizationPaymentSource" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="2" placeholder="@Localizer["Expense.DescriptionPlaceholder"]"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus"></i> @Localizer["Excursion.AddExpense"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Expenses List -->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h6 class="mb-0"><i class="fas fa-list"></i> @Localizer["Excursion.ExpensesList"]</h6>
        </div>
        <div class="card-body">
            @if (Model.Expenses.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Field.ExpenseDate"]</th>
                                <th>@Localizer["Field.Label"]</th>
                                <th>@Localizer["Field.Category"]</th>
                                <th>@Localizer["Field.Description"]</th>
                                <th>@Localizer["Field.PaymentSource"]</th>
                                <th class="text-end">@Localizer["Field.Amount"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expense in Model.Expenses)
                            {
                                <tr>
                                    <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@expense.Label</td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(expense.Category))
                                        {
                                            <span class="badge bg-secondary">@expense.Category</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(expense.Description))
                                        {
                                            <small class="text-muted">@expense.Description</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(expense.OrganizationPaymentSource))
                                        {
                                            <small>
                                                @if (expense.OrganizationPaymentSource == "OrganizationCard")
                                                {
                                                    <i class="fas fa-credit-card"></i> @Localizer["Payment.OrganizationCard"]
                                                }
                                                else if (expense.OrganizationPaymentSource == "OrganizationCash")
                                                {
                                                    <i class="fas fa-money-bill"></i> @Localizer["Payment.OrganizationCash"]
                                                }
                                                else
                                                {
                                                    @expense.OrganizationPaymentSource
                                                }
                                            </small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong class="text-danger">@expense.Amount.ToString("C2")</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end"><strong>@Localizer["Total"]:</strong></td>
                                <td class="text-end"><strong class="text-danger">@Model.TotalExpenses.ToString("C2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle"></i> @Localizer["Excursion.NoExpensesYet"]
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" asp-route-id="@Model.Activity?.Id" class="btn btn-link">
            <i class="fas fa-arrow-left"></i> @Localizer["BackToList"]
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            CedevaChoices.initAll('.form-select');
        });
    </script>
}
