@model Cedeva.Core.Entities.Excursion

@{
    ViewData["Title"] = Localizer["Delete"] + " - " + Model.Name;
    ViewData["ActivityId"] = Model.ActivityId;
    ViewData["ActivityName"] = Model.Activity?.Name;
    ViewData["NavSection"] = "Excursions";
    ViewData["NavAction"] = "Delete";
}


<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> @Localizer["Excursion.ConfirmDelete"]</h5>
                </div>
                <div class="card-body">
                    <p class="lead">@Localizer["Excursion.DeleteWarning"]</p>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Field.ExcursionName"]</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">@Localizer["Field.ExcursionDate"]</dt>
                        <dd class="col-sm-8">@Model.ExcursionDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Localizer["Field.ExcursionType"]</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@Localizer[$"Enum.ExcursionType.{Model.Type}"]</span></dd>

                        <dt class="col-sm-4">@Localizer["Field.ExcursionCost"]</dt>
                        <dd class="col-sm-8">@Model.Cost.ToString("C2")</dd>

                        <dt class="col-sm-4">@Localizer["Excursion.TotalRegistrations"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Registrations.Count > 0 ? "bg-warning text-dark" : "bg-secondary")">
                                @Model.Registrations.Count
                            </span>
                        </dd>
                    </dl>

                    @if (Model.Registrations.Count > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            @Localizer["Excursion.CannotDeleteRegistrations"]
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-id="@Model.ActivityId" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> @Localizer["Cancel"]
                        </a>

                        @if (Model.Registrations.Count == 0)
                        {
                            <form asp-action="Delete" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> @Localizer["Excursion.DeleteConfirm"]
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
