@model Cedeva.Website.Features.ActivityManagement.ViewModels.ExcursionTeamManagementViewModel

@{
    ViewData["Title"] = Localizer["Excursion.TeamMembers"] + " - " + Model.Excursion.Name;
    ViewData["ActivityId"] = Model.Activity.Id;
    ViewData["ActivityName"] = Model.Activity.Name;
    ViewData["NavSection"] = "Excursions";
    ViewData["NavAction"] = "TeamManagement";
}

<partial name="_ActivityManagementNav" />

<div class="container-fluid py-4">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Excursion Info -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-train"></i> @Model.Excursion.Name
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <p class="mb-1"><strong>@Localizer["Field.ExcursionDate"]:</strong> @Model.Excursion.ExcursionDate.ToString("dd/MM/yyyy")</p>
                    <p class="mb-1"><strong>@Localizer["Field.ExcursionType"]:</strong> @Localizer[$"Enum.ExcursionType.{Model.Excursion.Type}"]</p>
                </div>
                <div class="col-md-4">
                    @if (Model.Excursion.StartTime.HasValue || Model.Excursion.EndTime.HasValue)
                    {
                        <p class="mb-1">
                            <strong>@Localizer["Excursion.TimeSlot"]:</strong>
                            @if (Model.Excursion.StartTime.HasValue)
                            {
                                @Model.Excursion.StartTime.Value.ToString(@"hh\:mm")
                            }
                            @if (Model.Excursion.EndTime.HasValue)
                            {
                                <text> â€“ @Model.Excursion.EndTime.Value.ToString(@"hh\:mm")</text>
                            }
                        </p>
                    }
                </div>
                <div class="col-md-4">
                    <p class="mb-1"><strong>@Localizer["Field.TargetGroups"]:</strong></p>
                    @foreach (var eg in Model.Excursion.ExcursionGroups)
                    {
                        <span class="badge bg-secondary me-1">@eg.ActivityGroup.Label</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Instructions -->
    <div class="alert alert-info mb-4">
        <i class="fas fa-info-circle"></i> @Localizer["Excursion.TeamManagementHelp"]
    </div>

    @if (!Model.TeamMembers.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> @Localizer["Excursion.NoTeamMembers"]
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-users-cog"></i> @Localizer["Excursion.TeamMembers"]
                    <span class="badge bg-light text-dark ms-2">
                        @Model.TeamMembers.Count(tm => tm.IsAssigned) / @Model.TeamMembers.Count @Localizer["Excursion.Assigned"]
                    </span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["LastName"]</th>
                                <th>@Localizer["FirstName"]</th>
                                <th class="text-center">@Localizer["Excursion.Assigned"]</th>
                                <th class="text-center">@Localizer["Present"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tm in Model.TeamMembers)
                            {
                                <tr class="@(tm.IsAssigned ? "table-success" : "")" data-team-member-id="@tm.TeamMemberId">
                                    <td>@tm.LastName</td>
                                    <td>@tm.FirstName</td>
                                    <td class="text-center">
                                        <div class="form-check d-inline-block">
                                            <input type="checkbox"
                                                   class="form-check-input assign-checkbox"
                                                   data-excursion-id="@Model.Excursion.Id"
                                                   data-team-member-id="@tm.TeamMemberId"
                                                   @(tm.IsAssigned ? "checked" : "")
                                                   style="cursor: pointer;" />
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="form-check d-inline-block presence-container @(!tm.IsAssigned ? "d-none" : "")">
                                            <input type="checkbox"
                                                   class="form-check-input presence-checkbox"
                                                   data-etm-id="@(tm.ExcursionTeamMemberId ?? 0)"
                                                   @(tm.IsPresent ? "checked" : "")
                                                   style="cursor: pointer;" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary cards -->
        <div class="card">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h6 class="text-muted">@Localizer["Excursion.TeamMembers"]</h6>
                        <h3 class="text-primary">@Model.TeamMembers.Count(tm => tm.IsAssigned)</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">@Localizer["Excursion.PresentCount"]</h6>
                        <h3 class="text-success">@Model.TeamMembers.Count(tm => tm.IsAssigned && tm.IsPresent)</h3>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">@Localizer["Excursion.AbsentCount"]</h6>
                        <h3 class="text-danger">@Model.TeamMembers.Count(tm => tm.IsAssigned && !tm.IsPresent)</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" asp-route-id="@Model.Activity.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> @Localizer["BackToList"]
        </a>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        $(document).ready(function () {
            var token = $('input[name="__RequestVerificationToken"]').val();

            // Assignment checkbox
            $('.assign-checkbox').on('change', function () {
                var checkbox = $(this);
                var excursionId = checkbox.data('excursion-id');
                var teamMemberId = checkbox.data('team-member-id');
                var isAssigning = checkbox.is(':checked');
                var row = checkbox.closest('tr');
                var presenceContainer = row.find('.presence-container');

                var actionUrl = isAssigning
                    ? '@Url.Action("AssignTeamMember", "Excursions")'
                    : '@Url.Action("UnassignTeamMember", "Excursions")';

                $.ajax({
                    url: actionUrl,
                    type: 'POST',
                    headers: { 'RequestVerificationToken': token },
                    data: { excursionId: excursionId, teamMemberId: teamMemberId },
                    success: function (response) {
                        if (response.success) {
                            if (isAssigning) {
                                row.addClass('table-success');
                                presenceContainer.removeClass('d-none');
                            } else {
                                row.removeClass('table-success');
                                presenceContainer.addClass('d-none');
                                presenceContainer.find('.presence-checkbox').prop('checked', false);
                            }
                            // Reload to refresh ETM IDs for presence toggling
                            setTimeout(function () { location.reload(); }, 500);
                        } else {
                            alert('@Localizer["Error"]: ' + response.message);
                            checkbox.prop('checked', !isAssigning);
                        }
                    },
                    error: function () {
                        alert('@Localizer["Error.UpdateFailed"]');
                        checkbox.prop('checked', !isAssigning);
                    }
                });
            });

            // Presence checkbox
            $('.presence-checkbox').on('change', function () {
                var checkbox = $(this);
                var etmId = checkbox.data('etm-id');
                var isPresent = checkbox.is(':checked');

                if (etmId === 0) return; // Not yet assigned (shouldn't happen after reload)

                $.ajax({
                    url: '@Url.Action("UpdateTeamAttendance", "Excursions")',
                    type: 'POST',
                    headers: { 'RequestVerificationToken': token },
                    data: { excursionTeamMemberId: etmId, isPresent: isPresent },
                    success: function (response) {
                        if (!response.success) {
                            alert('@Localizer["Error"]: ' + response.message);
                            checkbox.prop('checked', !isPresent);
                        }
                    },
                    error: function () {
                        alert('@Localizer["Error.UpdateFailed"]');
                        checkbox.prop('checked', !isPresent);
                    }
                });
            });
        });
    </script>
}
