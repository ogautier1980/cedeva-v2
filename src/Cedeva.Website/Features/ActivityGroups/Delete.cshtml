@model Cedeva.Website.Features.ActivityGroups.ViewModels.ActivityGroupViewModel
@{
    ViewData["Title"] = Localizer["ActivityGroups.Delete"];
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash me-2"></i>@Localizer["ActivityGroups.Delete"]</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Localizer["ActivityGroups.DeleteWarning"]
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Field.Activity"]</dt>
                        <dd class="col-sm-8">@Model.ActivityName</dd>

                        <dt class="col-sm-4">@Localizer["Field.Label"]</dt>
                        <dd class="col-sm-8"><strong>@Model.Label</strong></dd>

                        <dt class="col-sm-4">@Localizer["Field.Capacity"]</dt>
                        <dd class="col-sm-8">
                            @if (Model.Capacity.HasValue)
                            {
                                @Model.Capacity
                            }
                            else
                            {
                                <span class="text-muted">@Localizer["ActivityGroups.NoLimit"]</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Localizer["ActivityGroups.BookingsCount"]</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.BookingsCount > 0 ? "bg-danger" : "bg-success")">
                                @Model.BookingsCount
                            </span>
                        </dd>
                    </dl>

                    @if (Model.BookingsCount > 0)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-ban me-2"></i>
                            @Localizer["ActivityGroups.CannotDeleteHasBookings"]
                        </div>
                    }

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-route-activityId="@Model.ActivityId" class="btn btn-outline-secondary text-nowrap">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            @if (Model.BookingsCount == 0)
                            {
                                <button type="submit" class="btn btn-danger text-nowrap">
                                    <i class="fas fa-trash me-2"></i>@Localizer["ConfirmDelete"]
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
