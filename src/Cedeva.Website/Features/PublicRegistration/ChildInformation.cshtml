@model Cedeva.Website.Features.PublicRegistration.ViewModels.ChildInformationViewModel

@{
    ViewData["Title"] = "Informations enfant";
    Layout = "~/Features/Shared/Layouts/_PublicLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-child me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p class="lead mb-4">Veuillez renseigner les informations de votre enfant.</p>

                    <form asp-action="ChildInformation" method="post">
                        <input type="hidden" asp-for="ActivityId" />
                        <input type="hidden" asp-for="ParentId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BirthDate" class="form-label"></label>
                                <input asp-for="BirthDate" class="form-control" type="date" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="NationalRegisterNumber" class="form-label"></label>
                                <input asp-for="NationalRegisterNumber" class="form-control" placeholder="Ex: 15.03.10-123.45" />
                                <span asp-validation-for="NationalRegisterNumber" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <hr class="my-4">
                                <h5><i class="fas fa-heartbeat me-2"></i>Informations m√©dicales et sociales</h5>
                                <p class="text-muted small">Ces informations nous permettent de mieux prendre en charge votre enfant.</p>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="IsDisadvantagedEnvironment" class="form-check-input" />
                                    <label asp-for="IsDisadvantagedEnvironment" class="form-check-label"></label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="IsMildDisability" class="form-check-input" />
                                    <label asp-for="IsMildDisability" class="form-check-label"></label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="IsSevereDisability" class="form-check-input" />
                                    <label asp-for="IsSevereDisability" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-arrow-right me-2"></i>Continuer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
