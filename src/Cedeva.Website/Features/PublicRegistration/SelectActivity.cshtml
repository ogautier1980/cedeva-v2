@model Cedeva.Website.Features.PublicRegistration.ViewModels.SelectActivityViewModel

@{
    ViewData["Title"] = Localizer["PublicRegistration.SelectActivity"];
    Layout = "~/Features/Shared/Layouts/_PublicLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p class="lead mb-4">@Localizer["PublicRegistration.SelectActivityLead"]</p>

                    <form asp-action="SelectActivity" method="post">
                        @if (!Model.AvailableActivities.Any())
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>@Localizer["PublicRegistration.NoActivitiesAvailable"]
                            </div>
                        }
                        else
                        {
                            <div class="row g-4">
                                @foreach (var activity in Model.AvailableActivities)
                                {
                                    <div class="col-md-6">
                                        <div class="card h-100 activity-card">
                                            <div class="card-body">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" asp-for="ActivityId" value="@activity.Id" id="activity_@activity.Id">
                                                    <label class="form-check-label w-100" for="activity_@activity.Id">
                                                        <h5 class="card-title">@activity.Name</h5>
                                                        <p class="card-text text-muted">@activity.Description</p>
                                                        <div class="activity-details">
                                                            <p class="mb-1">
                                                                <i class="fas fa-calendar me-2"></i>
                                                                <strong>@Localizer["PublicRegistration.From"]</strong> @activity.StartDate.ToString("dd/MM/yyyy")
                                                            </p>
                                                            <p class="mb-1">
                                                                <i class="fas fa-calendar-check me-2"></i>
                                                                <strong>@Localizer["PublicRegistration.To"]</strong> @activity.EndDate.ToString("dd/MM/yyyy")
                                                            </p>
                                                            @if (activity.PricePerDay.HasValue)
                                                            {
                                                                <p class="mb-1">
                                                                    <i class="fas fa-euro-sign me-2"></i>
                                                                    <strong>@Localizer["PublicRegistration.PricePerDay"]</strong> @activity.PricePerDay.Value.ToString("C")
                                                                </p>
                                                            }
                                                            <p class="mb-0">
                                                                <i class="fas fa-users me-2"></i>
                                                                <strong>@Localizer["PublicRegistration.Bookings"]</strong> @activity.Bookings.Count
                                                            </p>
                                                        </div>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="ActivityId" class="text-danger"></span>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-arrow-right me-2"></i>@Localizer["Continue"]
                                </button>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .activity-card {
        cursor: pointer;
        transition: all 0.3s;
        border: 2px solid #dee2e6;
    }
    .activity-card:hover {
        border-color: #0d6efd;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    .form-check-input:checked ~ .form-check-label .activity-card {
        border-color: #0d6efd;
        background-color: #e7f1ff;
    }
    .activity-details {
        font-size: 0.9rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
