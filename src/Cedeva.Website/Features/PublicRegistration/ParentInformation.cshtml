@model Cedeva.Website.Features.PublicRegistration.ViewModels.ParentInformationViewModel

@{
    ViewData["Title"] = Localizer["PublicRegistration.ParentInformation"];
    Layout = "~/Features/Shared/Layouts/_PublicLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-user-circle me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p class="lead mb-4">@Localizer["PublicRegistration.ParentInformationLead"]</p>

                    <form asp-action="ParentInformation" method="post">
                        <input type="hidden" asp-for="ActivityId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="FirstName" class="form-label">@Localizer["Field.FirstName"]</label>
                                <input asp-for="FirstName" class="form-control" id="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="LastName" class="form-label">@Localizer["Field.LastName"]</label>
                                <input asp-for="LastName" class="form-control" id="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label for="Email" class="form-label">@Localizer["Field.Email"]</label>
                                <input asp-for="Email" class="form-control" type="email" id="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="PhoneNumber" class="form-label">@Localizer["Field.PhoneNumber"]</label>
                                <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="MobilePhoneNumber" class="form-label">@Localizer["Field.MobilePhoneNumber"]</label>
                                <input asp-for="MobilePhoneNumber" class="form-control" id="MobilePhoneNumber" />
                                <span asp-validation-for="MobilePhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label for="NationalRegisterNumber" class="form-label">@Localizer["Field.NationalRegisterNumber"]</label>
                                <input asp-for="NationalRegisterNumber" class="form-control" placeholder="Ex: 85.05.12-123.45" id="NationalRegisterNumber" />
                                <span asp-validation-for="NationalRegisterNumber" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <hr class="my-4">
                                <h5><i class="fas fa-map-marker-alt me-2"></i>@Localizer["PublicRegistration.Address"]</h5>
                            </div>

                            <div class="col-12">
                                <label for="Street" class="form-label">@Localizer["Field.Street"]</label>
                                <input asp-for="Street" class="form-control" id="Street" />
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label for="PostalCode" class="form-label">@Localizer["Field.PostalCode"]</label>
                                <input asp-for="PostalCode" class="form-control" id="PostalCode" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>

                            <div class="col-md-8">
                                <label for="City" class="form-label">@Localizer["Field.City"]</label>
                                <input asp-for="City" class="form-control" id="City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-arrow-right me-2"></i>@Localizer["Continue"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            CedevaChoices.initAll('.form-select');
        });
    </script>
}
