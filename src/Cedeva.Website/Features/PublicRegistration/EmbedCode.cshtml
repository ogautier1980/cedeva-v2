@{
    ViewData["Title"] = Localizer["PublicRegistration.EmbedCode"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6"><i class="fas fa-code me-2"></i>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-window-maximize me-2"></i>@Localizer["PublicRegistration.IntegrationCode"]</h5>
                </div>
                <div class="card-body">
                    <p>@Localizer["PublicRegistration.EmbedInstructions"]</p>

                    <div class="position-relative">
                        <pre class="bg-light p-3 border rounded"><code id="embedCode">@ViewBag.EmbedCode</code></pre>
                        <button class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 m-2" onclick="copyToClipboard()">
                            <i class="fas fa-copy me-2"></i>@Localizer["PublicRegistration.Copy"]
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>@Localizer["PublicRegistration.Instructions"]</h5>
                </div>
                <div class="card-body">
                    <ol>
                        <li class="mb-2">@Localizer["PublicRegistration.Instruction1"]</li>
                        <li class="mb-2">@Localizer["PublicRegistration.Instruction2"]</li>
                        <li class="mb-2">@Localizer["PublicRegistration.Instruction3"]</li>
                        <li class="mb-0">@Localizer["PublicRegistration.Instruction4"]</li>
                    </ol>

                    <div class="alert alert-info mt-3 mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>@Localizer["PublicRegistration.Tip"]</strong> @Localizer["PublicRegistration.ShareLinkText"]
                        <a href="@ViewBag.IframeUrl" target="_blank">@ViewBag.IframeUrl</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-eye me-2"></i>@Localizer["PublicRegistration.Preview"]</h5>
                </div>
                <div class="card-body p-0">
                    <iframe src="@ViewBag.IframeUrl" width="100%" height="600" style="border: 1px solid #ddd;" title="@Localizer["PublicRegistration.PreviewFrame"]"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const code = document.getElementById('embedCode').textContent;
            navigator.clipboard.writeText(code).then(() => {
                alert('@Localizer["PublicRegistration.CopySuccess"]');
            }).catch(err => {
                console.error('@Localizer["PublicRegistration.CopyError"]', err);
            });
        }
    </script>
}
