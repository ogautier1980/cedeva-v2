@model Cedeva.Website.Features.Activities.ViewModels.ActivityViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">@Model.Name</h1>
            <small class="text-muted">@Model.OrganisationName</small>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@Url.Action("Details", new { id = Model.Id })" class="btn btn-warning text-nowrap">
                <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary text-nowrap">
                <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>@Localizer["Activities.GeneralInformation"]</h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">@Localizer["Activities.Description"]</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">@Localizer["Activities.Dates"]</dt>
                        <dd class="col-sm-9">
                            @Localizer["Activities.From"] @Model.StartDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("fr-BE"))
                            @Localizer["Activities.ToDate"] @Model.EndDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("fr-BE"))
                        </dd>

                        <dt class="col-sm-3">@Localizer["Activities.PricePerDay"]</dt>
                        <dd class="col-sm-9">
                            @if (Model.PricePerDay.HasValue)
                            {
                                @Model.PricePerDay.Value.ToString("C", new System.Globalization.CultureInfo("fr-BE"))
                            }
                            else
                            {
                                <span class="text-muted">@Localizer["Activities.NotDefined"]</span>
                            }
                        </dd>

                        <dt class="col-sm-3">@Localizer["Activities.StatusLabel"]</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">@Localizer["Active"]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Localizer["Activities.Inactive"]</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>@Localizer["Activities.Statistics"]</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="h4 mb-0 text-primary">@Model.BookingsCount</div>
                            <small class="text-muted">@Localizer["Bookings"]</small>
                        </div>
                        <div class="col-4">
                            <div class="h4 mb-0 text-success">@Model.GroupsCount</div>
                            <small class="text-muted">@Localizer["Activities.Groups"]</small>
                        </div>
                        <div class="col-4">
                            <div class="h4 mb-0 text-primary">@Model.TeamMembersCount</div>
                            <small class="text-muted">@Localizer["Activities.Team"]</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-cog me-2"></i>@Localizer["Activities.QuickActions"]</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="ActivityGroups" asp-action="Index" asp-route-activityId="@Model.Id" class="list-group-item list-group-item-action">
                        <i class="fas fa-users me-2"></i>@Localizer["Activities.ManageGroups"]
                    </a>
                    <a asp-controller="ActivityQuestions" asp-action="Index" asp-route-activityId="@Model.Id" class="list-group-item list-group-item-action">
                        <i class="fas fa-question-circle me-2"></i>@Localizer["Activities.CustomQuestions"]
                    </a>
                    <a asp-controller="Bookings" asp-action="Index" asp-route-activityId="@Model.Id" class="list-group-item list-group-item-action">
                        <i class="fas fa-clipboard-list me-2"></i>@Localizer["Activities.ViewBookings"]
                    </a>
                    <a asp-controller="ActivityManagement" asp-action="Presences" asp-route-activityId="@Model.Id" class="list-group-item list-group-item-action">
                        <i class="fas fa-calendar-check me-2"></i>@Localizer["Activities.ManagePresences"]
                    </a>
                    <a asp-controller="PublicRegistration" asp-action="EmbedCode" asp-route-activityId="@Model.Id" class="list-group-item list-group-item-action">
                        <i class="fas fa-code me-2"></i>@Localizer["Activities.IntegrationCode"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    @* Activity Days Section *@
    @if (Model.WeeklyDays.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <h6 class="mb-3"><i class="fas fa-calendar-week me-2"></i>@Localizer["Activities.DaysSchedule"]</h6>
                <div class="row g-3">
                    @foreach (var week in Model.WeeklyDays)
                    {
                        var hasActiveWeekendDays = week.Days.Any(d => d.IsWeekend && d.IsActive);
                        var displayDays = hasActiveWeekendDays
                            ? week.Days
                            : week.Days.Where(d => !d.IsWeekend).ToList();

                        <div class="col-md-6 col-lg-4">
                            <div class="card shadow h-100">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-calendar me-2"></i>@week.WeekLabel
                                            <small class="text-muted ms-2">(@week.StartDate.ToString("dd/MM") - @week.EndDate.ToString("dd/MM/yyyy"))</small>
                                        </div>
                                        <span class="badge bg-success">@week.ActiveDaysCount / @displayDays.Count()</span>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="list-group list-group-flush">
                                        @foreach (var day in displayDays)
                                        {
                                            var dayName = day.DayOfWeek switch
                                            {
                                                DayOfWeek.Monday => Localizer["DayOfWeek.Monday"],
                                                DayOfWeek.Tuesday => Localizer["DayOfWeek.Tuesday"],
                                                DayOfWeek.Wednesday => Localizer["DayOfWeek.Wednesday"],
                                                DayOfWeek.Thursday => Localizer["DayOfWeek.Thursday"],
                                                DayOfWeek.Friday => Localizer["DayOfWeek.Friday"],
                                                DayOfWeek.Saturday => Localizer["DayOfWeek.Saturday"],
                                                DayOfWeek.Sunday => Localizer["DayOfWeek.Sunday"],
                                                _ => ""
                                            };
                                            var statusClass = day.IsActive ? "text-success" : "text-secondary";
                                            var statusIcon = day.IsActive ? "fa-check-circle" : "fa-times-circle";
                                            var bgClass = day.IsWeekend ? "bg-light" : "";

                                            <div class="list-group-item @bgClass py-2">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas @statusIcon @statusClass me-2"></i>
                                                    <div>
                                                        <strong>@dayName</strong>
                                                        <small class="text-muted ms-1">@day.DayDate.ToString("dd/MM")</small>
                                                        @if (day.IsWeekend)
                                                        {
                                                            <span class="badge bg-warning text-dark ms-1" style="font-size: 0.65rem;">Week-end</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
