@model Cedeva.Website.Features.Activities.ViewModels.ActivityListViewModel
@{
    ViewData["Title"] = Localizer["Activities"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">@Localizer["Activities"]</h1>
        <div class="d-flex gap-2">
            <a asp-action="Export" asp-route-searchTerm="@Model.SearchTerm" asp-route-showActiveOnly="@Model.ShowActiveOnly" class="btn btn-success text-nowrap">
                <i class="fas fa-file-excel me-2"></i>@Localizer["Activities.ExportExcel"]
            </a>
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Activities.NewActivity"]
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">@Localizer["Search"]</label>
                    <input type="text" name="searchTerm" id="searchTerm" class="form-control" value="@Model.SearchTerm" placeholder="@Localizer["Activities.SearchPlaceholder"]">
                </div>
                <div class="col-md-3">
                    <label for="showActiveOnly" class="form-label">@Localizer["Status"]</label>
                    <select name="showActiveOnly" id="showActiveOnly" class="form-select">
                        <option value="">@Localizer["Activities.All"]</option>
                        <option value="true" selected="@(Model.ShowActiveOnly == true)">@Localizer["Activities.ActiveOnly"]</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fas fa-search me-2"></i>@Localizer["Activities.Filter"]
                    </button>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-2"></i>@Localizer["Activities.Reset"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Activities Table -->
    <div class="card shadow">
        <div class="card-body">
            @if (Model.Activities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Activities.Dates"]</th>
                                <th class="text-center">@Localizer["Activities.PricePerDay"]</th>
                                <th class="text-center">@Localizer["Activities.Bookings"]</th>
                                <th class="text-center">@Localizer["Status"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Activities)
                            {
                                <tr>
                                    <td>
                                        <strong>@activity.Name</strong>
                                        <br><small class="text-muted">@activity.OrganisationName</small>
                                    </td>
                                    <td>
                                        @activity.StartDate.ToString("dd/MM/yyyy") - @activity.EndDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        @if (activity.PricePerDay.HasValue)
                                        {
                                            @activity.PricePerDay.Value.ToString("C", new System.Globalization.CultureInfo("fr-BE"))
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@activity.BookingsCount</span>
                                    </td>
                                    <td class="text-center">
                                        @if (activity.IsActive)
                                        {
                                            <span class="badge bg-success">@Localizer["Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Localizer["Activities.Inactive"]</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-controller="ActivityManagement" asp-action="Index" asp-route-id="@activity.Id" class="btn btn-sm btn-success" title="@Localizer["Activities.ManageActivity"]">
                                                <i class="fas fa-tasks"></i> @Localizer["Activities.Manage"]
                                            </a>
                                            <a asp-action="Details" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-showActiveOnly="@Model.ShowActiveOnly">
                                    @Localizer["Activities.Previous"]
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-showActiveOnly="@Model.ShowActiveOnly">
                                        @i
                                    </a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-showActiveOnly="@Model.ShowActiveOnly">
                                    @Localizer["Activities.Next"]
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["Activities.NoActivitiesFound"]</p>
                    <a asp-action="Create" class="btn btn-primary">@Localizer["Activities.CreateActivity"]</a>
                </div>
            }
        </div>
    </div>
</div>
