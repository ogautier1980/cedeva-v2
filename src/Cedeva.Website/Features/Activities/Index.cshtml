@model Cedeva.Website.Features.Activities.ViewModels.ActivityListViewModel
@{
    ViewData["Title"] = Localizer["Activities"];
    var searchString = ViewData["SearchString"] as string;
    var showActiveOnly = ViewData["ShowActiveOnly"] as bool?;
    var pageNumber = (ViewData["PageNumber"] as int?) ?? 1;
    var pageSize = (ViewData["PageSize"] as int?) ?? 10;
    var totalPages = (ViewData["TotalPages"] as int?) ?? 1;
    var totalItems = (ViewData["TotalItems"] as int?) ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar-alt me-2"></i>@Localizer["Activities"]</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary text-nowrap">
                <i class="fas fa-plus me-2"></i>@Localizer["Activities.NewActivity"]
            </a>
            <a asp-action="Export" asp-route-searchString="@searchString" asp-route-showActiveOnly="@showActiveOnly" class="btn btn-primary" title="@Localizer["Activities.ExportExcel"]">
                <i class="fas fa-file-excel"></i>
            </a>
            <a asp-action="ExportPdf" asp-route-searchTerm="@searchString" asp-route-showActiveOnly="@showActiveOnly" class="btn btn-primary" title="@Localizer["ExportPdf"]">
                <i class="fas fa-file-pdf"></i>
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_AlertMessages")
    <div class="card shadow">
        <div class="card-header">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" name="searchString" value="@searchString" placeholder="@Localizer["Activities.SearchPlaceholder"]" />
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="showActiveOnly" class="form-select">
                        <option value="">@Localizer["Activities.All"]</option>
                        <option value="true" selected="@(showActiveOnly == true)">@Localizer["Activities.ActiveOnly"]</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search me-2"></i>@Localizer["Search"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            @if (Model.Activities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("Name", Localizer["Name"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th>@await Html.PartialAsync("_SortableColumnHeader", ("StartDate", Localizer["Activities.Dates"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th class="text-center">@Localizer["Activities.PricePerDay"]</th>
                                <th class="text-center">@Localizer["Activities.Bookings"]</th>
                                <th class="text-center">@await Html.PartialAsync("_SortableColumnHeader", ("IsActive", Localizer["Status"].Value, ViewData["SortBy"] as string, ViewData["SortOrder"] as string))</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Activities)
                            {
                                <tr>
                                    <td>
                                        <strong>@activity.Name</strong>
                                        <br><small class="text-muted">@activity.OrganisationName</small>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="fas fa-calendar me-1 text-muted"></i>@activity.StartDate.ToString("dd/MM/yyyy") - @activity.EndDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        @if (activity.PricePerDay.HasValue)
                                        {
                                            @activity.PricePerDay.Value.ToString("C", new System.Globalization.CultureInfo("fr-BE"))
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@activity.BookingsCount</span>
                                    </td>
                                    <td class="text-center">
                                        @if (activity.IsActive)
                                        {
                                            <span class="badge bg-success">@Localizer["Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Localizer["Activities.Inactive"]</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-controller="ActivityManagement" asp-action="Index" asp-route-id="@activity.Id" class="btn btn-sm btn-success" title="@Localizer["Activities.ManageActivity"]">
                                                <i class="fas fa-tasks"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@activity.Id" class="btn btn-sm btn-primary" title="@Localizer["Details"]">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@activity.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-sm btn-warning" title="@Localizer["Edit"]">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@activity.Id" class="btn btn-sm btn-danger" title="@Localizer["Delete"]">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_Pagination")
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <p class="text-muted">@Localizer["Activities.NoActivitiesFound"]</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>@Localizer["Activities.CreateActivity"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>
