@model Cedeva.Website.Features.Activities.ViewModels.ActivityViewModel
@{
    ViewData["Title"] = Localizer["Activities.DeleteActivity"];
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Activities.ConfirmDeletionTitle"]</h5>
                </div>
                <div class="card-body">
                    <p class="lead">@Localizer["Activities.DeleteWarning"]</p>

                    <dl class="row">
                        <dt class="col-sm-4">@Localizer["Name"]</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">@Localizer["Activities.Organisation"]</dt>
                        <dd class="col-sm-8">@Model.OrganisationName</dd>

                        <dt class="col-sm-4">@Localizer["Activities.Dates"]</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Localizer["Bookings"]</dt>
                        <dd class="col-sm-8">
                            @if (Model.BookingsCount > 0)
                            {
                                <span class="badge bg-warning text-dark">@Model.BookingsCount @Localizer["Activities.BookingCount"]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Localizer["Activities.None"]</span>
                            }
                        </dd>
                    </dl>

                    @if (Model.BookingsCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Localizer["Activities.HasBookingsWarning"]
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                        </a>

                        @if (Model.BookingsCount == 0)
                        {
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>@Localizer["Activities.DeletePermanently"]
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
