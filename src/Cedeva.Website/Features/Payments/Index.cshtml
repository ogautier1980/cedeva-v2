@using Cedeva.Website.Features.Payments.ViewModels
@model List<PaymentListViewModel>
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Payments.Title"];
    var activityName = ViewBag.ActivityName as string;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@Localizer["Payments.Title"]</h2>
            @if (!string.IsNullOrEmpty(activityName))
            {
                <p class="text-muted">@Localizer["Payments.ForActivity"]: <strong>@activityName</strong></p>
            }
        </div>
        <a asp-controller="Financial" asp-action="ImportCoda" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> @Localizer["Common.Back"]
        </a>
    </div>

    @await Html.PartialAsync("_AlertMessages")
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            @Localizer["Payments.NoPayments"]
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Localizer["Field.Date"]</th>
                                <th>@Localizer["Field.Child"]</th>
                                <th>@Localizer["Field.Parent"]</th>
                                <th>@Localizer["Field.Activity"]</th>
                                <th>@Localizer["Field.Amount"]</th>
                                <th>@Localizer["Field.PaymentMethod"]</th>
                                <th>@Localizer["Field.Status"]</th>
                                <th>@Localizer["Common.Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                                    <td>@payment.ChildName</td>
                                    <td>@payment.ParentName</td>
                                    <td>@payment.ActivityName</td>
                                    <td><strong class="text-success">@payment.Amount.ToString("C")</strong></td>
                                    <td>
                                        @switch (payment.PaymentMethod)
                                        {
                                            case PaymentMethod.BankTransfer:
                                                <span class="badge bg-info"><i class="fas fa-university"></i> @Localizer["PaymentMethod.BankTransfer"]</span>
                                                break;
                                            case PaymentMethod.Cash:
                                                <span class="badge bg-success"><i class="fas fa-money-bill"></i> @Localizer["PaymentMethod.Cash"]</span>
                                                break;
                                            case PaymentMethod.Other:
                                                <span class="badge bg-secondary"><i class="fas fa-question"></i> @Localizer["PaymentMethod.Other"]</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @switch (payment.Status)
                                        {
                                            case PaymentStatus.Paid:
                                                <span class="badge bg-success">@Localizer["PaymentStatus.Paid"]</span>
                                                break;
                                            case PaymentStatus.Cancelled:
                                                <span class="badge bg-danger">@Localizer["PaymentStatus.Cancelled"]</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@payment.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Bookings" asp-action="Details" asp-route-id="@payment.BookingId" class="btn btn-sm btn-outline-secondary" title="@Localizer["Bookings.ViewBooking"]">
                                            <i class="fas fa-file-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
