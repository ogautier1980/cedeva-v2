@model Cedeva.Website.Features.Financial.ViewModels.FinancialReportViewModel
@inject IStringLocalizer<SharedResources> Localizer
@using Cedeva.Website.Localization

@{
    ViewData["Title"] = Localizer["Financial.Report"];
}


<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4 no-print">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">
                        <i class="fas fa-file-alt me-2"></i>@Localizer["Financial.Report"]
                    </h1>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>@Localizer["Button.Back"]
                    </a>
                    <button onclick="window.print()" class="btn btn-primary">
                        <i class="fas fa-print me-1"></i>@Localizer["Button.Print"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Header for Print -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2>@Localizer["Financial.ComprehensiveReport"]</h2>
            <h4 class="text-muted">@Model.ActivityName</h4>
            <p class="text-muted">
                @Localizer["Field.Period"]: @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                (@Model.TotalDays @Localizer["Financial.Days"])
            </p>
            <p class="small text-muted">@Localizer["Financial.GeneratedOn"]: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <!-- Executive Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>@Localizer["Financial.ExecutiveSummary"]</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center border-end">
                            <h6 class="text-muted">@Localizer["Financial.TotalRevenue"]</h6>
                            <h3 class="text-success">@Model.TotalRevenue.ToString("N2") €</h3>
                        </div>
                        <div class="col-md-3 text-center border-end">
                            <h6 class="text-muted">@Localizer["Financial.TotalExpenses"]</h6>
                            <h3 class="text-danger">@Model.TotalExpenses.ToString("N2") €</h3>
                        </div>
                        <div class="col-md-3 text-center border-end">
                            <h6 class="text-muted">@Localizer["Financial.Balance"]</h6>
                            <h3 class="@(Model.Balance >= 0 ? "text-primary" : "text-warning")">
                                @Model.Balance.ToString("N2") €
                            </h3>
                        </div>
                        <div class="col-md-3 text-center">
                            <h6 class="text-muted">@Localizer["Financial.Margin"]</h6>
                            <h3 class="@(Model.BalancePercentage >= 0 ? "text-primary" : "text-warning")">
                                @Model.BalancePercentage.ToString("N1") %
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-euro-sign me-2"></i>@Localizer["Financial.RevenueDetails"]</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th style="width: 50%">@Localizer["Financial.TotalBookings"]</th>
                                <td class="text-end">@Model.TotalBookings</td>
                            </tr>
                            <tr>
                                <th>@Localizer["Financial.ConfirmedBookings"]</th>
                                <td class="text-end">@Model.ConfirmedBookings</td>
                            </tr>
                            <tr>
                                <th>@Localizer["Financial.PendingBookings"]</th>
                                <td class="text-end">@Model.PendingBookings</td>
                            </tr>
                            <tr>
                                <th>@Localizer["Financial.TotalRevenue"]</th>
                                <td class="text-end"><strong>@Model.TotalRevenue.ToString("N2") €</strong></td>
                            </tr>
                            <tr>
                                <th>@Localizer["Financial.PendingAmount"]</th>
                                <td class="text-end text-warning">@Model.PendingAmount.ToString("N2") €</td>
                            </tr>
                            <tr>
                                <th>@Localizer["Financial.AveragePerBooking"]</th>
                                <td class="text-end">@Model.AverageRevenuePerBooking.ToString("N2") €</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Organization Expenses Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0 text-white"><i class="fas fa-building me-2"></i>@Localizer["Expense.OrganizationExpenses"]</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>@Localizer["Expense.OrganizationCard"]</th>
                                    <td class="text-end">@Model.OrganizationCardExpenses.ToString("N2") €</td>
                                </tr>
                                <tr>
                                    <th>@Localizer["Expense.OrganizationCash"]</th>
                                    <td class="text-end">@Model.OrganizationCashExpenses.ToString("N2") €</td>
                                </tr>
                                <tr class="table-warning">
                                    <th>@Localizer["Financial.Total"]</th>
                                    <td class="text-end"><strong>@Model.TotalOrganizationExpenses.ToString("N2") €</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (Model.OrganizationExpenseDetails.Any())
                    {
                        <h6>@Localizer["Financial.DetailedExpenses"]</h6>
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["Expense.Date"]</th>
                                    <th>@Localizer["Field.Label"]</th>
                                    <th>@Localizer["Expense.Category"]</th>
                                    <th class="text-end">@Localizer["Field.Amount"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in Model.OrganizationExpenseDetails)
                                {
                                    <tr>
                                        <td>@expense.Date?.ToString("dd/MM/yyyy")</td>
                                        <td>@expense.Label</td>
                                        <td>@expense.Category</td>
                                        <td class="text-end">@expense.Amount.ToString("N2") €</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Team Salaries Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>@Localizer["Financial.TeamSalaries"]</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong>@Localizer["Financial.TeamMembersCount"]:</strong> @Model.TeamMembersCount<br />
                        <strong>@Localizer["Financial.TotalTeamSalaries"]:</strong> @Model.TotalTeamSalaries.ToString("N2") €
                    </p>

                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Field.Name"]</th>
                                <th>@Localizer["Field.Role"]</th>
                                <th class="text-end">@Localizer["Financial.Days"]</th>
                                <th class="text-end">@Localizer["Financial.DailyCompensation"]</th>
                                <th class="text-end">@Localizer["Financial.BaseSalary"]</th>
                                <th class="text-end">@Localizer["Financial.Reimbursements"]</th>
                                <th class="text-end">@Localizer["Financial.Consumptions"]</th>
                                <th class="text-end">@Localizer["Financial.NetSalary"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tm in Model.TeamMemberSalaryDetails)
                            {
                                <tr>
                                    <td>@tm.Name</td>
                                    <td>@tm.Role</td>
                                    <td class="text-end">@tm.DaysWorked</td>
                                    <td class="text-end">@tm.DailyCompensation.ToString("N2") €</td>
                                    <td class="text-end">@tm.BaseSalary.ToString("N2") €</td>
                                    <td class="text-end text-success">+@tm.Reimbursements.ToString("N2") €</td>
                                    <td class="text-end text-danger">-@tm.PersonalConsumptions.ToString("N2") €</td>
                                    <td class="text-end"><strong>@tm.NetSalary.ToString("N2") €</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <th colspan="7">@Localizer["Financial.Total"]</th>
                                <th class="text-end">@Model.TotalTeamSalaries.ToString("N2") €</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Final Summary -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>@Localizer["Financial.FinalSummary"]</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="table-success">
                                <th style="width: 50%">@Localizer["Financial.TotalRevenue"]</th>
                                <td class="text-end"><strong>@Model.TotalRevenue.ToString("N2") €</strong></td>
                            </tr>
                            <tr>
                                <th>@Localizer["Expense.OrganizationExpenses"]</th>
                                <td class="text-end">@Model.TotalOrganizationExpenses.ToString("N2") €</td>
                            </tr>
                            <tr>
                                <th>@Localizer["Financial.TeamSalaries"]</th>
                                <td class="text-end">@Model.TotalTeamSalaries.ToString("N2") €</td>
                            </tr>
                            <tr class="table-danger">
                                <th>@Localizer["Financial.TotalExpenses"]</th>
                                <td class="text-end"><strong>@Model.TotalExpenses.ToString("N2") €</strong></td>
                            </tr>
                            <tr class="table-@(Model.Balance >= 0 ? "primary" : "warning")">
                                <th>@Localizer["Financial.Balance"]</th>
                                <td class="text-end"><strong>@Model.Balance.ToString("N2") €</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }
            .card {
                page-break-inside: avoid;
                margin-bottom: 20px;
            }
        }
    </style>
}
