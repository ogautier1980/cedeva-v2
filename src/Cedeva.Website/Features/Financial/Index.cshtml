@model Cedeva.Website.Features.Financial.ViewModels.ActivityFinancialDashboardViewModel
@inject IStringLocalizer<SharedResources> Localizer
@using Cedeva.Website.Localization

@{
    ViewData["Title"] = Localizer["Financial.Dashboard"];
    ViewData["ActivityId"] = Model.ActivityId;
    ViewData["ActivityName"] = Model.ActivityName;
    ViewData["NavSection"] = "Financial";
}


<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-2">
                <i class="fas fa-chart-line me-2"></i>@Localizer["Financial.Dashboard"]
            </h1>
            <p class="text-muted mb-0">
                <strong>@Localizer["Field.Activity"]:</strong> @Model.ActivityName<br />
                <strong>@Localizer["Field.Period"]:</strong> @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
            </p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-success shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                @Localizer["Financial.TotalRevenue"]
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalRevenue.ToString("N2") €
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-danger shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                @Localizer["Financial.TotalExpenses"]
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalExpenses.ToString("N2") €
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-@(Model.Balance >= 0 ? "primary" : "warning") shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-@(Model.Balance >= 0 ? "primary" : "warning") text-uppercase mb-1">
                                @Localizer["Financial.Balance"]
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Balance.ToString("N2") €
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-balance-scale fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-warning shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                @Localizer["Financial.PendingPayments"]
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.PendingPaymentsAmount.ToString("N2") €
                            </div>
                            <div class="text-xs text-muted">
                                @Model.PendingPaymentsCount @Localizer["Financial.Booking(s)"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Cards -->
    <div class="row mb-4">
        <div class="col-12">
            <h5 class="mb-3">
                <i class="fas fa-tasks me-2"></i>@Localizer["Financial.Actions"]
            </h5>
        </div>
    </div>

    <div class="row g-3">
        <!-- Salaires équipe -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <a asp-action="TeamSalaries" class="text-decoration-none">
                <div class="card shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="fas fa-money-bill-wave fa-3x text-primary mb-3"></i>
                        <h6 class="card-title">@Localizer["Financial.TeamSalaries"]</h6>
                        <p class="card-text text-muted small">
                            @Model.TeamMembersCount @Localizer["Financial.TeamMember(s)"]<br />
                            @Localizer["Financial.Total"]: @Model.TeamMemberExpenses.ToString("N2") €
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Transactions (Paiements + Dépenses) -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <a asp-action="Transactions" class="text-decoration-none">
                <div class="card shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="fas fa-exchange-alt fa-3x text-primary mb-3"></i>
                        <h6 class="card-title">@Localizer["Financial.Transactions"]</h6>
                        <p class="card-text text-muted small">
                            @Localizer["Financial.TransactionsList"]
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Rapport financier -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <a asp-action="Report" class="text-decoration-none">
                <div class="card shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="fas fa-file-alt fa-3x text-primary mb-3"></i>
                        <h6 class="card-title">@Localizer["Financial.Report"]</h6>
                        <p class="card-text text-muted small">
                            @Localizer["Financial.ComprehensiveReport"]
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Info Box -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>@Localizer["Financial.Info"]:</strong> @Localizer["Financial.DashboardInfo"]
            </div>
        </div>
    </div>
</div>
