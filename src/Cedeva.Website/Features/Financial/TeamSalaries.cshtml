@model Cedeva.Website.Features.Financial.ViewModels.TeamSalariesViewModel
@inject IStringLocalizer<SharedResources> Localizer
@using Cedeva.Website.Localization

@{
    ViewData["Title"] = Localizer["Financial.TeamSalaries"];
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">
                        <i class="fas fa-money-bill-wave me-2"></i>@Localizer["Financial.TeamSalaries"]
                    </h1>
                    <p class="text-muted mb-0">
                        <strong>@Localizer["Field.Activity"]:</strong> @Model.ActivityName<br />
                        <strong>@Localizer["Field.Period"]:</strong> @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                        (@Model.TotalDays @Localizer["Financial.Days"])
                    </p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>@Localizer["Button.Back"]
                    </a>
                    <a asp-action="ExportTeamSalaries" class="btn btn-success" title="@Localizer["Button.ExportExcel"]">
                        <i class="fas fa-file-excel"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.TeamSalaries.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Financial.NoTeamMembers"]
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-left-primary shadow h-100">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @Localizer["Financial.TotalPrestations"]
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.TotalPrestations.ToString("N2") €
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-left-success shadow h-100">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    @Localizer["Financial.TotalReimbursements"]
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    +@Model.TotalReimbursements.ToString("N2") €
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-receipt fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-left-danger shadow h-100">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    @Localizer["Financial.TotalConsumptions"]
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    -@Model.TotalPersonalConsumptions.ToString("N2") €
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-left-primary shadow h-100">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @Localizer["Financial.GrandTotal"]
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.GrandTotal.ToString("N2") €
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Team Salaries Table -->
        <div class="card shadow mb-4">
            <div class="card-header bg-primary">
                <h6 class="mb-0 text-white">
                    <i class="fas fa-users me-2"></i>@Localizer["Financial.TeamMemberSalaries"]
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>@Localizer["Financial.ImportantNote"]:</strong> @Localizer["Financial.SalaryCalculationInfo"]
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>@Localizer["Field.TeamMember"]</th>
                                <th>@Localizer["Field.Email"]</th>
                                <th>@Localizer["Field.Role"]</th>
                                <th class="text-end">@Localizer["Financial.Days"]</th>
                                <th class="text-end">@Localizer["Financial.DailyCompensation"]</th>
                                <th class="text-end">@Localizer["Financial.Prestations"]</th>
                                <th class="text-end">@Localizer["Financial.Reimbursements"]</th>
                                <th class="text-end">@Localizer["Financial.Consumptions"]</th>
                                <th class="text-end"><strong>@Localizer["Financial.TotalToPay"]</strong></th>
                                <th class="text-center">@Localizer["Field.Details"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var salary in Model.TeamSalaries)
                            {
                                <tr>
                                    <td>@salary.TeamMemberName</td>
                                    <td>@salary.Email</td>
                                    <td>@Localizer[$"Enum.TeamRole.{salary.TeamRole}"]</td>
                                    <td class="text-end">@salary.DaysCount</td>
                                    <td class="text-end">@salary.DailyCompensation.ToString("N2") €</td>
                                    <td class="text-end">@salary.Prestations.ToString("N2") €</td>
                                    <td class="text-end text-success">
                                        @if (salary.ReimbursementsCount > 0)
                                        {
                                            <span title="@salary.ReimbursementsCount @Localizer["Financial.Reimbursement(s)"]">
                                                +@salary.Reimbursements.ToString("N2") € (@salary.ReimbursementsCount)
                                            </span>
                                        }
                                        else
                                        {
                                            <span>0,00 €</span>
                                        }
                                    </td>
                                    <td class="text-end text-danger">
                                        @if (salary.PersonalConsumptionsCount > 0)
                                        {
                                            <span title="@salary.PersonalConsumptionsCount @Localizer["Financial.Consumption(s)"]">
                                                -@salary.PersonalConsumptions.ToString("N2") € (@salary.PersonalConsumptionsCount)
                                            </span>
                                        }
                                        else
                                        {
                                            <span>0,00 €</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong>@salary.TotalToPay.ToString("N2") €</strong>
                                    </td>
                                    <td class="text-center">
                                        @if (salary.ReimbursementsCount > 0 || salary.PersonalConsumptionsCount > 0)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-primary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#detailsModal_@salary.TeamMemberId">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <th colspan="5">@Localizer["Financial.Total"]</th>
                                <th class="text-end">@Model.TotalPrestations.ToString("N2") €</th>
                                <th class="text-end text-success">+@Model.TotalReimbursements.ToString("N2") €</th>
                                <th class="text-end text-danger">-@Model.TotalPersonalConsumptions.ToString("N2") €</th>
                                <th class="text-end"><strong>@Model.GrandTotal.ToString("N2") €</strong></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modals for expense details -->
@foreach (var salary in Model.TeamSalaries)
{
    @if (salary.ReimbursementsCount > 0 || salary.PersonalConsumptionsCount > 0)
    {
        <div class="modal fade" id="detailsModal_@salary.TeamMemberId" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="fas fa-list me-2"></i>@Localizer["Financial.ExpenseDetails"] - @salary.TeamMemberName
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @if (salary.ReimbursementsCount > 0)
                        {
                            <h6 class="text-success">
                                <i class="fas fa-receipt me-2"></i>@Localizer["Financial.Reimbursements"] (@salary.ReimbursementsCount)
                            </h6>
                            <table class="table table-sm table-bordered mb-4">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Field.Label"]</th>
                                        <th class="text-end">@Localizer["Field.Amount"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var expense in salary.ReimbursementDetails)
                                    {
                                        <tr>
                                            <td>@expense.Label</td>
                                            <td class="text-end">@expense.Amount.ToString("N2") €</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-success">
                                        <th>@Localizer["Financial.TotalReimbursements"]</th>
                                        <th class="text-end">@salary.Reimbursements.ToString("N2") €</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }

                        @if (salary.PersonalConsumptionsCount > 0)
                        {
                            <h6 class="text-danger">
                                <i class="fas fa-shopping-cart me-2"></i>@Localizer["Financial.PersonalConsumptions"] (@salary.PersonalConsumptionsCount)
                            </h6>
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Field.Label"]</th>
                                        <th class="text-end">@Localizer["Field.Amount"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var expense in salary.PersonalConsumptionDetails)
                                    {
                                        <tr>
                                            <td>@expense.Label</td>
                                            <td class="text-end">@expense.Amount.ToString("N2") €</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-danger">
                                        <th>@Localizer["Financial.TotalConsumptions"]</th>
                                        <th class="text-end">@salary.PersonalConsumptions.ToString("N2") €</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>@Localizer["Button.Close"]
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}
